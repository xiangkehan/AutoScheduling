<Page
    x:Class="AutoScheduling3.Views.Settings.TestDataGeneratorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:AutoScheduling3.Views.Settings"
    xmlns:vm="using:AutoScheduling3.ViewModels.Settings"
    xmlns:testdata="using:AutoScheduling3.TestData"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="测试数据生成器" 
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,20"/>

        <!-- 主内容 -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="24">

                <!-- 数据规模配置 -->
                <StackPanel Spacing="12">
                    <TextBlock Text="数据规模配置" 
                               Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <RadioButtons ItemsSource="{x:Bind ViewModel.ScaleOptions}"
                                  SelectedItem="{x:Bind ViewModel.SelectedScale, Mode=TwoWay}"/>
                </StackPanel>

                <!-- 配置预览卡片 -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16"
                        Visibility="{x:Bind ViewModel.IsCustomScale, Mode=OneWay}">
                    <StackPanel Spacing="12">
                        <TextBlock Text="配置预览" 
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                        
                        <Grid ColumnSpacing="16" RowSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- 预估总记录数 -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="预估总记录数:" 
                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       FontWeight="SemiBold">
                                <Run Text="{x:Bind ViewModel.EstimatedTotalRecords, Mode=OneWay}"/>
                                <Run Text="条"/>
                            </TextBlock>

                            <!-- 推荐人员数量 -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="推荐人员数量:" 
                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" 
                                        Orientation="Horizontal" 
                                        Spacing="8">
                                <TextBlock FontWeight="SemiBold">
                                    <Run Text="{x:Bind ViewModel.RecommendedPersonnelCount, Mode=OneWay}"/>
                                    <Run Text="人"/>
                                </TextBlock>
                                <Button Content="应用推荐" 
                                        Command="{x:Bind ViewModel.ApplyRecommendedPersonnelCountCommand}"
                                        Style="{StaticResource AccentButtonStyle}"
                                        Padding="8,4"
                                        FontSize="12"
                                        Visibility="{x:Bind ViewModel.ShowPersonnelRecommendation, Mode=OneWay}"/>
                            </StackPanel>

                            <!-- 配置验证结果 -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="配置状态:" 
                                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="{x:Bind ViewModel.ValidationMessage, Mode=OneWay}"
                                       TextWrapping="Wrap"
                                       FontSize="12"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 自定义配置 -->
                <StackPanel Spacing="12" 
                            Visibility="{x:Bind ViewModel.IsCustomScale, Mode=OneWay}">
                    <TextBlock Text="自定义配置" 
                               Style="{StaticResource SubtitleTextBlockStyle}"/>
                    
                    <!-- 基础数据量配置 -->
                    <TextBlock Text="基础数据量" 
                               FontWeight="SemiBold"
                               Margin="0,8,0,0"/>
                    <Grid ColumnSpacing="16" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 技能数量 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="技能数量:" 
                                   VerticalAlignment="Center"/>
                        <NumberBox Grid.Row="0" Grid.Column="1" 
                                   Value="{x:Bind ViewModel.SkillCount, Mode=TwoWay}"
                                   Minimum="1" Maximum="50" 
                                   SpinButtonPlacementMode="Inline"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" 
                                   Text="(1-50)" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                        <!-- 人员数量 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="人员数量:" 
                                   VerticalAlignment="Center"/>
                        <NumberBox Grid.Row="1" Grid.Column="1" 
                                   Value="{x:Bind ViewModel.PersonnelCount, Mode=TwoWay}"
                                   Minimum="1" Maximum="100" 
                                   SpinButtonPlacementMode="Inline"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" 
                                   Text="(1-100)" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                        <!-- 哨位数量 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="哨位数量:" 
                                   VerticalAlignment="Center"/>
                        <NumberBox Grid.Row="2" Grid.Column="1" 
                                   Value="{x:Bind ViewModel.PositionCount, Mode=TwoWay}"
                                   Minimum="1" Maximum="50" 
                                   SpinButtonPlacementMode="Inline"/>
                        <TextBlock Grid.Row="2" Grid.Column="2" 
                                   Text="(1-50)" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                        <!-- 模板数量 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="模板数量:" 
                                   VerticalAlignment="Center"/>
                        <NumberBox Grid.Row="3" Grid.Column="1" 
                                   Value="{x:Bind ViewModel.TemplateCount, Mode=TwoWay}"
                                   Minimum="1" Maximum="20" 
                                   SpinButtonPlacementMode="Inline"/>
                        <TextBlock Grid.Row="3" Grid.Column="2" 
                                   Text="(1-20)" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                        <!-- 定岗规则数量 -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                   Text="定岗规则数量:" 
                                   VerticalAlignment="Center"/>
                        <NumberBox Grid.Row="4" Grid.Column="1" 
                                   Value="{x:Bind ViewModel.FixedAssignmentCount, Mode=TwoWay}"
                                   Minimum="0" Maximum="50" 
                                   SpinButtonPlacementMode="Inline"/>
                        <TextBlock Grid.Row="4" Grid.Column="2" 
                                   Text="(0-50)" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                        <!-- 手动指定数量 -->
                        <TextBlock Grid.Row="5" Grid.Column="0" 
                                   Text="手动指定数量:" 
                                   VerticalAlignment="Center"/>
                        <NumberBox Grid.Row="5" Grid.Column="1" 
                                   Value="{x:Bind ViewModel.ManualAssignmentCount, Mode=TwoWay}"
                                   Minimum="0" Maximum="100" 
                                   SpinButtonPlacementMode="Inline"/>
                        <TextBlock Grid.Row="5" Grid.Column="2" 
                                   Text="(0-100)" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                        <!-- 节假日配置数量 -->
                        <TextBlock Grid.Row="6" Grid.Column="0" 
                                   Text="节假日配置数量:" 
                                   VerticalAlignment="Center"/>
                        <NumberBox Grid.Row="6" Grid.Column="1" 
                                   Value="{x:Bind ViewModel.HolidayConfigCount, Mode=TwoWay}"
                                   Minimum="1" Maximum="10" 
                                   SpinButtonPlacementMode="Inline"/>
                        <TextBlock Grid.Row="6" Grid.Column="2" 
                                   Text="(1-10)" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                    </Grid>

                    <!-- 质量控制配置 -->
                    <TextBlock Text="质量控制" 
                               FontWeight="SemiBold"
                               Margin="0,16,0,0"/>
                    <Grid ColumnSpacing="16" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 每哨位最小人员数 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="每哨位最小人员数:" 
                                   VerticalAlignment="Center">
                            <ToolTipService.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        <Run Text="确保每个哨位至少有指定数量的可用人员。"/>
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Run Text="建议值：3-5人" FontWeight="SemiBold"/>
                                        <LineBreak/>
                                        <Run Text="• 值越大，生成的数据越接近实际场景"/>
                                        <LineBreak/>
                                        <Run Text="• 需要相应增加人员总数"/>
                                    </TextBlock>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>
                        <NumberBox Grid.Row="0" Grid.Column="1" 
                                   Value="{x:Bind ViewModel.MinPersonnelPerPosition, Mode=TwoWay}"
                                   Minimum="1" Maximum="20" 
                                   SpinButtonPlacementMode="Inline">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="每个哨位至少需要的可用人员数量"/>
                            </ToolTipService.ToolTip>
                        </NumberBox>
                        <TextBlock Grid.Row="0" Grid.Column="2" 
                                   Text="(1-20，确保每个哨位有足够的可用人员)" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                        <!-- 人员可用率 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="人员可用率:" 
                                   VerticalAlignment="Center">
                            <ToolTipService.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        <Run Text="模拟人员请假、出差、培训等不可用情况。"/>
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Run Text="场景参考：" FontWeight="SemiBold"/>
                                        <LineBreak/>
                                        <Run Text="• 演练场景：95%（人员充足）"/>
                                        <LineBreak/>
                                        <Run Text="• 日常场景：85%（正常情况）"/>
                                        <LineBreak/>
                                        <Run Text="• 实战场景：75%（人员紧张）"/>
                                    </TextBlock>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>
                        <Slider Grid.Row="1" Grid.Column="1" 
                                Value="{x:Bind ViewModel.PersonnelAvailabilityRate, Mode=TwoWay}"
                                Minimum="0.5" Maximum="1.0" 
                                StepFrequency="0.05"
                                TickFrequency="0.1"
                                TickPlacement="BottomRight"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}">
                            <Run Text="{x:Bind ViewModel.PersonnelAvailabilityRatePercent, Mode=OneWay}"/>
                            <Run Text="% (50%-100%，模拟人员请假、出差等情况)"/>
                        </TextBlock>

                        <!-- 人员退役率 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   Text="人员退役率:" 
                                   VerticalAlignment="Center">
                            <ToolTipService.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        <Run Text="模拟人员退役、离职、长期病假等永久不可用情况。"/>
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Run Text="场景参考：" FontWeight="SemiBold"/>
                                        <LineBreak/>
                                        <Run Text="• 演练场景：5%（人员稳定）"/>
                                        <LineBreak/>
                                        <Run Text="• 日常场景：10%（正常流动）"/>
                                        <LineBreak/>
                                        <Run Text="• 实战场景：15%（人员流失）"/>
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Run Text="注意：可用率 + 退役率 ≤ 100%" FontWeight="SemiBold" Foreground="Orange"/>
                                    </TextBlock>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>
                        <Slider Grid.Row="2" Grid.Column="1" 
                                Value="{x:Bind ViewModel.PersonnelRetirementRate, Mode=TwoWay}"
                                Minimum="0.0" Maximum="0.3" 
                                StepFrequency="0.01"
                                TickFrequency="0.05"
                                TickPlacement="BottomRight">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="已退役或离职的人员比例"/>
                            </ToolTipService.ToolTip>
                        </Slider>
                        <TextBlock Grid.Row="2" Grid.Column="2" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}">
                            <Run Text="{x:Bind ViewModel.PersonnelRetirementRatePercent, Mode=OneWay}"/>
                            <Run Text="% (0%-30%，模拟人员退役、离职等情况)"/>
                        </TextBlock>

                        <!-- 多技能人员比例 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="多技能人员比例:" 
                                   VerticalAlignment="Center">
                            <ToolTipService.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        <Run Text="拥有多个技能的人员比例，直接影响哨位之间的人员共享程度。"/>
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Run Text="场景参考：" FontWeight="SemiBold"/>
                                        <LineBreak/>
                                        <Run Text="• 0%：每个人员只有一个技能（最少共享）"/>
                                        <LineBreak/>
                                        <Run Text="• 25-30%：实战场景（低共享）"/>
                                        <LineBreak/>
                                        <Run Text="• 35%：默认值（适度共享）"/>
                                        <LineBreak/>
                                        <Run Text="• 40%+：演练场景（高共享，灵活性强）"/>
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Run Text="提示：值越低，哨位之间共享的人员越少" FontWeight="SemiBold" Foreground="Orange"/>
                                    </TextBlock>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>
                        <Slider Grid.Row="3" Grid.Column="1" 
                                Value="{x:Bind ViewModel.MultiSkilledPersonnelRate, Mode=TwoWay}"
                                Minimum="0.0" Maximum="0.6" 
                                StepFrequency="0.05"
                                TickFrequency="0.1"
                                TickPlacement="BottomRight">
                            <ToolTipService.ToolTip>
                                <ToolTip Content="调整多技能人员比例以控制哨位之间的人员共享程度"/>
                            </ToolTipService.ToolTip>
                        </Slider>
                        <TextBlock Grid.Row="3" Grid.Column="2" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}">
                            <Run Text="{x:Bind ViewModel.MultiSkilledPersonnelRatePercent, Mode=OneWay}"/>
                            <Run Text="% (0%-60%，值越低人员共享越少)"/>
                        </TextBlock>
                    </Grid>

                    <!-- 其他配置 -->
                    <TextBlock Text="其他配置" 
                               FontWeight="SemiBold"
                               Margin="0,16,0,0"/>
                    <Grid ColumnSpacing="16" RowSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 随机种子 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="随机种子:" 
                                   VerticalAlignment="Center"/>
                        <NumberBox Grid.Row="0" Grid.Column="1" 
                                   Value="{x:Bind ViewModel.RandomSeed, Mode=TwoWay}"
                                   Minimum="0" Maximum="999999" 
                                   SpinButtonPlacementMode="Inline"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" 
                                   Text="(用于生成可重现的随机数据)" 
                                   VerticalAlignment="Center"
                                   Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>

                        <!-- 无技能模式 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   Text="无技能模式:" 
                                   VerticalAlignment="Center">
                            <ToolTipService.ToolTip>
                                <ToolTip>
                                    <TextBlock TextWrapping="Wrap" MaxWidth="300">
                                        <Run Text="开启后，生成的哨位都没有技能要求，人员也都没有技能。"/>
                                        <LineBreak/>
                                        <LineBreak/>
                                        <Run Text="适用场景：" FontWeight="SemiBold"/>
                                        <LineBreak/>
                                        <Run Text="• 测试不考虑技能匹配的排班算法"/>
                                        <LineBreak/>
                                        <Run Text="• 简化测试数据，专注于其他约束"/>
                                        <LineBreak/>
                                        <Run Text="• 快速生成基础测试数据"/>
                                    </TextBlock>
                                </ToolTip>
                            </ToolTipService.ToolTip>
                        </TextBlock>
                        <CheckBox Grid.Row="1" Grid.Column="1" 
                                  Grid.ColumnSpan="2"
                                  Content="启用无技能模式（哨位无技能要求，人员无技能）"
                                  IsChecked="{x:Bind ViewModel.NoSkillMode, Mode=TwoWay}"/>
                    </Grid>
                </StackPanel>

                <!-- 生成选项 -->
                <StackPanel Spacing="12">
                    <TextBlock Text="生成选项" 
                               Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <CheckBox Content="自动打开文件位置"
                              IsChecked="{x:Bind ViewModel.AutoOpenFileLocation, Mode=TwoWay}"/>
                    <CheckBox Content="生成后显示数据统计"
                              IsChecked="{x:Bind ViewModel.ShowStatisticsAfterGeneration, Mode=TwoWay}"/>
                </StackPanel>

                <!-- 输出文件 -->
                <StackPanel Spacing="12">
                    <TextBlock Text="输出文件" 
                               Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" 
                                 Text="{x:Bind ViewModel.OutputFilePath, Mode=TwoWay}"
                                 IsReadOnly="True"
                                 PlaceholderText="默认保存到 ApplicationData\LocalFolder\TestData"/>
                        <Button Grid.Column="1" 
                                Content="浏览..." 
                                Command="{x:Bind ViewModel.BrowseCommand}"/>
                    </Grid>
                    <TextBlock Text="{x:Bind ViewModel.DefaultOutputDirectory}" 
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                               FontSize="12"/>
                </StackPanel>

                <!-- 操作按钮 -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <Button Content="生成测试数据" 
                            Command="{x:Bind ViewModel.GenerateCommand}"
                            Style="{StaticResource AccentButtonStyle}"/>
                    <Button Content="刷新列表" 
                            Command="{x:Bind ViewModel.RefreshRecentFilesCommand}"/>
                    <Button Content="清理旧文件" 
                            Command="{x:Bind ViewModel.CleanOldFilesCommand}"/>
                </StackPanel>

                <!-- 进度显示 -->
                <StackPanel Spacing="8" 
                            Visibility="{x:Bind ViewModel.IsGenerating, Mode=OneWay}">
                    <ProgressBar Value="{x:Bind ViewModel.ProgressPercentage, Mode=OneWay}"
                                 Maximum="100"
                                 IsIndeterminate="False"/>
                    <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                </StackPanel>

                <!-- 最近生成的文件 -->
                <StackPanel Spacing="12">
                    <TextBlock Text="最近生成的文件" 
                               Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <ListView ItemsSource="{x:Bind ViewModel.RecentFiles, Mode=OneWay}"
                              SelectionMode="None"
                              MaxHeight="400">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="testdata:GeneratedFileInfo">
                                <Grid Padding="8" ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{x:Bind FileName}" 
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                                                   FontSize="12">
                                            <Run Text="{x:Bind FormattedDate}"/>
                                            <Run Text=" • "/>
                                            <Run Text="{x:Bind FormattedSize}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <Button Grid.Column="1" 
                                            Content="导入"
                                            Command="{x:Bind ImportCommand}"
                                            CommandParameter="{x:Bind}"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                    <Button Grid.Column="2" 
                                            Content="打开位置"
                                            Command="{x:Bind OpenLocationCommand}"
                                            CommandParameter="{x:Bind}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
