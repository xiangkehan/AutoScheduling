<Page
    x:Class="AutoScheduling3.Views.DataManagement.PersonnelPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="using:AutoScheduling3.DTOs"
    xmlns:controls="using:AutoScheduling3.Controls"
    xmlns:conv="using:AutoScheduling3.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <!-- 修正转换器命名空间 -->
        <conv:BoolToTextConverter x:Key="BoolToTextConverter"/>
        <conv:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
        <conv:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="人员管理" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="管理所有人员信息" 
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- 主内容区 -->
        <Grid Grid.Row="1" x:Name="MainContentGrid" SizeChanged="MainContentGrid_SizeChanged">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="0.4*" MinWidth="300" MaxWidth="500"/>
            </Grid.ColumnDefinitions>
            
            <!-- 小屏幕时的行定义（垂直布局） -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 左侧：人员列表 -->
            <Grid x:Name="PersonnelListGrid" Grid.Column="0" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 搜索和操作栏 -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <AutoSuggestBox Grid.Column="0" 
                                    PlaceholderText="搜索人员..."
                                    QueryIcon="Find"
                                    Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <CommandBar Grid.Column="1" DefaultLabelPosition="Right">
                        <AppBarButton Icon="Refresh" Label="刷新" Command="{x:Bind ViewModel.RefreshCommand}"/>
                    </CommandBar>
                </Grid>

                <!-- 人员列表 -->
                <GridView x:Name="PersonnelGridView"
                          Grid.Row="1"
                          ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=TwoWay}"
                          SelectionMode="Single"
                          ItemContainerStyle="{StaticResource GridViewItemStyleWithoutHover}"
                          HorizontalAlignment="Stretch"
                          Loaded="PersonnelGridView_Loaded">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="local:PersonnelDto">
                            <controls:PersonnelCard Personnel="{x:Bind}" Margin="0,0,12,12"/>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal" HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </Grid>

            <!-- 分隔线（仅在水平布局时显示） -->
            <Border x:Name="SeparatorBorder" Grid.Column="1" Grid.Row="0" 
                    Width="1" 
                    Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                    Margin="8,0"/>

            <!-- 右侧：详情和编辑 -->
            <ScrollViewer x:Name="DetailScrollViewer" Grid.Column="2" Grid.Row="0">
                <StackPanel Spacing="12">
                    <!-- 添加人员表单 -->
                    <Expander Header="添加新人员" IsExpanded="True">
                        <StackPanel Spacing="12" Margin="0,12,0,0">
                            <!-- 姓名输入 -->
                            <StackPanel>
                                <TextBox x:Name="NameTextBox"
                                         Header="姓名*" 
                                         Text="{x:Bind ViewModel.NewPersonnel.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         PlaceholderText="请输入姓名"
                                         TextChanged="NameTextBox_TextChanged"/>
                                <TextBlock Text="{x:Bind ViewModel.NameValidationMessage, Mode=OneWay}"
                                           Foreground="Red"
                                           FontSize="12"
                                           Margin="0,4,0,0"
                                           Visibility="{x:Bind ViewModel.IsNameValid, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"/>
                            </StackPanel>

                            <!-- 技能选择 -->
                            <StackPanel>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="技能*" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <TextBlock x:Name="SelectedSkillCountText" 
                                               Grid.Column="2" 
                                               Text="已选择: 0"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                                <Border BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Background="{ThemeResource ControlFillColorDefaultBrush}"
                                        Padding="4">
                                    <Grid MinHeight="60">
                                        <ListView x:Name="SkillsListView"
                                                  ItemsSource="{x:Bind ViewModel.AvailableSkills, Mode=OneWay}"
                                                  SelectionMode="Multiple"
                                                  MaxHeight="120"
                                                  SelectionChanged="SkillsListView_SelectionChanged">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="local:SkillDto">
                                                    <TextBlock Text="{x:Bind Name}"/>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                        <TextBlock Text="暂无技能数据，请先添加技能"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Margin="8"
                                                   Visibility="{x:Bind ViewModel.AvailableSkills.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                                <TextBlock Text="{x:Bind ViewModel.SkillsValidationMessage, Mode=OneWay}"
                                           Foreground="Red"
                                           FontSize="12"
                                           Margin="0,4,0,0"
                                           Visibility="{x:Bind ViewModel.AreSkillsValid, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"/>
                            </StackPanel>

                            <!-- 状态设置 -->
                            <ToggleSwitch Header="是否可用" 
                                          IsOn="{x:Bind ViewModel.NewPersonnel.IsAvailable, Mode=TwoWay}"/>

                            <!-- 操作按钮 -->
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="添加人员" 
                                        Command="{x:Bind ViewModel.CreateCommand}"
                                        Style="{StaticResource AccentButtonStyle}"/>
                                <Button Content="重置表单" Click="ResetForm_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- 人员详情 -->
                    <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.SelectedItem, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="人员详情" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        
                        <!-- 编辑表单 -->
                        <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBox x:Name="EditNameTextBox"
                                         Header="姓名*" 
                                         Text="{x:Bind ViewModel.EditingPersonnel.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         TextChanged="EditNameTextBox_TextChanged"/>
                                <TextBlock x:Name="EditNameErrorText"
                                           Foreground="Red"
                                           FontSize="12"
                                           Margin="0,4,0,0"
                                           Visibility="Collapsed"/>
                            </StackPanel>
                            
                            <!-- 技能编辑 -->
                            <StackPanel>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="技能*" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <TextBlock x:Name="EditSelectedSkillCountText" 
                                               Grid.Column="2" 
                                               Text="已选择: 0"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                                <Border BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Background="{ThemeResource ControlFillColorDefaultBrush}"
                                        Padding="4">
                                    <Grid MinHeight="60">
                                        <ListView x:Name="EditSkillsListView"
                                                  ItemsSource="{x:Bind ViewModel.AvailableSkills, Mode=OneWay}"
                                                  SelectionMode="Multiple"
                                                  MaxHeight="120"
                                                  SelectionChanged="EditSkillsListView_SelectionChanged">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="local:SkillDto">
                                                    <TextBlock Text="{x:Bind Name}"/>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                        <TextBlock Text="暂无技能数据，请先添加技能"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Margin="8"
                                                   Visibility="{x:Bind ViewModel.AvailableSkills.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                                <TextBlock x:Name="EditSkillsErrorText"
                                           Foreground="Red"
                                           FontSize="12"
                                           Margin="0,4,0,0"
                                           Visibility="Collapsed"/>
                            </StackPanel>
                            
                            <ToggleSwitch Header="是否可用" 
                                          IsOn="{x:Bind ViewModel.EditingPersonnel.IsAvailable, Mode=TwoWay}"/>
                            
                            <ToggleSwitch Header="是否已退役" 
                                          IsOn="{x:Bind ViewModel.EditingPersonnel.IsRetired, Mode=TwoWay}"/>
                            
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="保存" Command="{x:Bind ViewModel.SaveCommand}" Style="{StaticResource AccentButtonStyle}"/>
                                <Button Content="取消" Command="{x:Bind ViewModel.CancelCommand}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 详情显示 -->
                        <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                            <TextBlock Text="{x:Bind ViewModel.SelectedItem.Name, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                            
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="状态:" FontWeight="SemiBold"/>
                                <TextBlock Text="{x:Bind ViewModel.SelectedItem.IsActive, Mode=OneWay, Converter={StaticResource BoolToTextConverter}, ConverterParameter='在职|离职'}"/>
                                <TextBlock Text="{x:Bind ViewModel.SelectedItem.IsAvailable, Mode=OneWay, Converter={StaticResource BoolToTextConverter}, ConverterParameter='可用|忙碌'}"/>
                            </StackPanel>
                            
                            <StackPanel>
                                <TextBlock Text="技能:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ItemsRepeater ItemsSource="{x:Bind ViewModel.SelectedItem.SkillNames, Mode=OneWay}">
                                    <ItemsRepeater.Layout>
                                        <StackLayout Orientation="Horizontal" Spacing="4"/>
                                    </ItemsRepeater.Layout>
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="x:String">
                                            <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="6,3">
                                                <TextBlock Text="{x:Bind}" FontSize="12" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>
                            </StackPanel>
                        </StackPanel>

                        <!-- 操作按钮 -->
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,12,0,0"
                                    Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                            <Button Content="编辑" Command="{x:Bind ViewModel.EditCommand}"/>
                            <Button Content="删除" Command="{x:Bind ViewModel.DeleteCommand}" Style="{StaticResource AccentButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- 空状态提示 -->
                    <TextBlock Text="选择左侧人员查看详情" 
                               Visibility="{x:Bind ViewModel.SelectedItem, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- 状态控件 -->
        <controls:LoadingIndicator IsLoading="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Grid.RowSpan="2"/>
        <controls:EmptyState IsVisible="{x:Bind ViewModel.ShowEmptyState, Mode=OneWay}"
                             Title="暂无人员"
                             Subtitle="您还没有添加任何人员信息。"
                             ButtonText="添加人员"
                             ButtonCommand="{x:Bind ViewModel.CreateCommand}"
                             Grid.Row="1"/>
        <controls:ErrorState IsVisible="{x:Bind ViewModel.ShowErrorState, Mode=OneWay}"
                             Title="加载失败"
                             Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                             RetryCommand="{x:Bind ViewModel.RefreshCommand}"
                             Grid.Row="1"/>
    </Grid>
</Page>
