<Page
    x:Class="AutoScheduling3.Views.DataManagement.PersonnelPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="using:AutoScheduling3.DTOs"
    xmlns:controls="using:AutoScheduling3.Controls"
    xmlns:conv="using:AutoScheduling3.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <!-- 修正转换器命名空间 -->
        <conv:BoolToTextConverter x:Key="BoolToTextConverter"/>
        <conv:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
        <conv:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <conv:PeriodIndexToTimeConverter x:Key="PeriodIndexToTimeConverter"/>
        <conv:InvertedBooleanConverter x:Key="InvertedBooleanConverter"/>
        <conv:DateTimeFormatConverter x:Key="DateTimeFormatConverter"/>
    </Page.Resources>

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="人员管理" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="管理所有人员信息" 
                       Style="{StaticResource BodyTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- 主内容区 -->
        <Grid Grid.Row="1" x:Name="MainContentGrid" SizeChanged="MainContentGrid_SizeChanged">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="0.4*" MinWidth="300" MaxWidth="500"/>
            </Grid.ColumnDefinitions>
            
            <!-- 小屏幕时的行定义（垂直布局） -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 左侧：人员列表 -->
            <Grid x:Name="PersonnelListGrid" Grid.Column="0" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 搜索和操作栏 -->
                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <AutoSuggestBox Grid.Column="0" 
                                    PlaceholderText="搜索人员..."
                                    QueryIcon="Find"
                                    Text="{x:Bind ViewModel.SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <CommandBar Grid.Column="1" DefaultLabelPosition="Right">
                        <AppBarButton Icon="Refresh" Label="刷新" Command="{x:Bind ViewModel.RefreshCommand}"/>
                    </CommandBar>
                </Grid>

                <!-- 人员列表 -->
                <GridView x:Name="PersonnelGridView"
                          Grid.Row="1"
                          ItemsSource="{x:Bind ViewModel.Items, Mode=OneWay}"
                          SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=TwoWay}"
                          SelectionMode="Single"
                          ItemContainerStyle="{StaticResource GridViewItemStyleWithoutHover}"
                          HorizontalAlignment="Stretch"
                          Loaded="PersonnelGridView_Loaded">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="local:PersonnelDto">
                            <controls:PersonnelCard Personnel="{x:Bind}" Margin="0,0,12,12"/>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid Orientation="Horizontal" HorizontalAlignment="Left"/>
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </Grid>

            <!-- 分隔线（仅在水平布局时显示） -->
            <Border x:Name="SeparatorBorder" Grid.Column="1" Grid.Row="0" 
                    Width="1" 
                    Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                    Margin="8,0"/>

            <!-- 右侧：详情和编辑 -->
            <ScrollViewer x:Name="DetailScrollViewer" Grid.Column="2" Grid.Row="0">
                <StackPanel Spacing="12">
                    <!-- 添加人员表单 -->
                    <Expander Header="添加新人员" IsExpanded="True">
                        <StackPanel Spacing="12" Margin="0,12,0,0">
                            <!-- 姓名输入 -->
                            <StackPanel>
                                <TextBox x:Name="NameTextBox"
                                         Header="姓名*" 
                                         Text="{x:Bind ViewModel.NewPersonnel.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         PlaceholderText="请输入姓名"
                                         TextChanged="NameTextBox_TextChanged"/>
                                <TextBlock Text="{x:Bind ViewModel.NameValidationMessage, Mode=OneWay}"
                                           Foreground="Red"
                                           FontSize="12"
                                           Margin="0,4,0,0"
                                           Visibility="{x:Bind ViewModel.IsNameValid, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"/>
                            </StackPanel>

                            <!-- 技能选择 -->
                            <StackPanel>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="技能（可选）" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <TextBlock x:Name="SelectedSkillCountText" 
                                               Grid.Column="2" 
                                               Text="已选择: 0"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                                <Border BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Background="{ThemeResource ControlFillColorDefaultBrush}"
                                        Padding="4">
                                    <Grid MinHeight="60">
                                        <ListView x:Name="SkillsListView"
                                                  ItemsSource="{x:Bind ViewModel.AvailableSkills, Mode=OneWay}"
                                                  SelectionMode="Multiple"
                                                  MaxHeight="120"
                                                  SelectionChanged="SkillsListView_SelectionChanged">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="local:SkillDto">
                                                    <TextBlock Text="{x:Bind Name}"/>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                        <TextBlock Text="暂无技能数据，请先添加技能"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Margin="8"
                                                   Visibility="{x:Bind ViewModel.AvailableSkills.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <!-- 状态设置 -->
                            <ToggleSwitch Header="是否可用" 
                                          IsOn="{x:Bind ViewModel.NewPersonnel.IsAvailable, Mode=TwoWay}"/>

                            <!-- 操作按钮 -->
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="添加人员" 
                                        Command="{x:Bind ViewModel.CreateCommand}"
                                        Style="{StaticResource AccentButtonStyle}"/>
                                <Button Content="重置表单" Click="ResetForm_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- 人员详情 -->
                    <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.SelectedItem, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="人员详情" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        
                        <!-- 编辑表单 -->
                        <StackPanel Spacing="12" Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                            <StackPanel>
                                <TextBox x:Name="EditNameTextBox"
                                         Header="姓名*" 
                                         Text="{x:Bind ViewModel.EditingPersonnel.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         TextChanged="EditNameTextBox_TextChanged"/>
                                <TextBlock x:Name="EditNameErrorText"
                                           Foreground="Red"
                                           FontSize="12"
                                           Margin="0,4,0,0"
                                           Visibility="Collapsed"/>
                            </StackPanel>
                            
                            <!-- 技能编辑 -->
                            <StackPanel>
                                <Grid Margin="0,0,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="技能" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <TextBlock x:Name="EditSelectedSkillCountText" 
                                               Grid.Column="2" 
                                               Text="已选择: 0"
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                                <Border BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" 
                                        BorderThickness="1" 
                                        CornerRadius="4"
                                        Background="{ThemeResource ControlFillColorDefaultBrush}"
                                        Padding="4">
                                    <Grid MinHeight="60">
                                        <ListView x:Name="EditSkillsListView"
                                                  ItemsSource="{x:Bind ViewModel.AvailableSkills, Mode=OneWay}"
                                                  SelectionMode="Multiple"
                                                  MaxHeight="120"
                                                  SelectionChanged="EditSkillsListView_SelectionChanged">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="local:SkillDto">
                                                    <TextBlock Text="{x:Bind Name}"/>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                        <TextBlock Text="暂无技能数据，请先添加技能"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Margin="8"
                                                   Visibility="{x:Bind ViewModel.AvailableSkills.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}"/>
                                    </Grid>
                                </Border>
                                <TextBlock x:Name="EditSkillsErrorText"
                                           Foreground="Red"
                                           FontSize="12"
                                           Margin="0,4,0,0"
                                           Visibility="Collapsed"/>
                            </StackPanel>
                            
                            <ToggleSwitch Header="是否可用" 
                                          IsOn="{x:Bind ViewModel.EditingPersonnel.IsAvailable, Mode=TwoWay}"/>
                            
                            <ToggleSwitch Header="是否已退役" 
                                          IsOn="{x:Bind ViewModel.EditingPersonnel.IsRetired, Mode=TwoWay}"/>
                            
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="保存" Command="{x:Bind ViewModel.SaveCommand}" Style="{StaticResource AccentButtonStyle}"/>
                                <Button Content="取消" Command="{x:Bind ViewModel.CancelCommand}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 详情显示 -->
                        <StackPanel Spacing="8" Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                            <TextBlock Text="{x:Bind ViewModel.SelectedItem.Name, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}"/>
                            
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="状态:" FontWeight="SemiBold"/>
                                <TextBlock Text="{x:Bind ViewModel.SelectedItem.IsActive, Mode=OneWay, Converter={StaticResource BoolToTextConverter}, ConverterParameter='在职|离职'}"/>
                                <TextBlock Text="{x:Bind ViewModel.SelectedItem.IsAvailable, Mode=OneWay, Converter={StaticResource BoolToTextConverter}, ConverterParameter='可用|忙碌'}"/>
                            </StackPanel>
                            
                            <StackPanel>
                                <TextBlock Text="技能:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ItemsRepeater ItemsSource="{x:Bind ViewModel.SelectedItem.SkillNames, Mode=OneWay}">
                                    <ItemsRepeater.Layout>
                                        <StackLayout Orientation="Horizontal" Spacing="4"/>
                                    </ItemsRepeater.Layout>
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="x:String">
                                            <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="6,3">
                                                <TextBlock Text="{x:Bind}" FontSize="12" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>
                            </StackPanel>
                        </StackPanel>

                        <!-- 操作按钮 -->
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,12,0,0"
                                    Visibility="{x:Bind ViewModel.IsEditing, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                            <Button Content="编辑" Command="{x:Bind ViewModel.EditCommand}"/>
                            <Button Content="删除" Command="{x:Bind ViewModel.DeleteCommand}" Style="{StaticResource AccentButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- 空状态提示 -->
                    <TextBlock Text="选择左侧人员查看详情" 
                               Visibility="{x:Bind ViewModel.SelectedItem, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                    <!-- 定岗规则区域 -->
                    <Expander Header="定岗规则" 
                              IsExpanded="False"
                              Visibility="{x:Bind ViewModel.SelectedItem, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"
                              Margin="0,12,0,0">
                        <StackPanel Spacing="12" Margin="0,12,0,0">
                            <!-- 规则创建表单 -->
                            <StackPanel Spacing="12" 
                                        Visibility="{x:Bind ViewModel.IsCreatingRule, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="创建定岗规则" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                
                                <!-- 验证错误消息 -->
                                <InfoBar x:Name="CreateRuleValidationInfoBar"
                                         Severity="Error"
                                         IsOpen="{x:Bind ViewModel.IsRuleValid, Mode=OneWay, Converter={StaticResource InvertedBooleanConverter}}"
                                         Message="{x:Bind ViewModel.RuleValidationMessage, Mode=OneWay}"
                                         IsClosable="False"
                                         Visibility="{x:Bind ViewModel.RuleValidationMessage, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"/>
                                
                                <!-- 哨位选择 -->
                                <StackPanel>
                                    <Grid Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="允许的哨位" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock x:Name="CreateSelectedPositionCountText" 
                                                   Grid.Column="2" 
                                                   Text="已选择: 0"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                    <Border BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" 
                                            BorderThickness="1" 
                                            CornerRadius="4"
                                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                                            Padding="4">
                                        <Grid MinHeight="60">
                                            <ListView x:Name="CreatePositionsListView"
                                                      ItemsSource="{x:Bind ViewModel.AvailablePositions, Mode=OneWay}"
                                                      SelectionMode="Multiple"
                                                      MaxHeight="120"
                                                      SelectionChanged="CreatePositionsListView_SelectionChanged">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate x:DataType="local:PositionDto">
                                                        <TextBlock Text="{x:Bind Name}"/>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                            <TextBlock Text="暂无哨位数据，请先添加哨位"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="8"
                                                       Visibility="{x:Bind ViewModel.AvailablePositions.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- 时段选择 -->
                                <StackPanel>
                                    <Grid Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="允许的时段" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock x:Name="CreateSelectedTimeSlotCountText" 
                                                   Grid.Column="2" 
                                                   Text="已选择: 0"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                    <Border BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" 
                                            BorderThickness="1" 
                                            CornerRadius="4"
                                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                                            Padding="4">
                                        <ListView x:Name="CreateTimeSlotsListView"
                                                  SelectionMode="Multiple"
                                                  MaxHeight="200"
                                                  SelectionChanged="CreateTimeSlotsListView_SelectionChanged">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="x:Int32">
                                                    <TextBlock>
                                                        <Run Text="{x:Bind}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{x:Bind Converter={StaticResource PeriodIndexToTimeConverter}}"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Border>
                                </StackPanel>

                                <!-- 规则名称 -->
                                <TextBox Header="规则名称*" 
                                         Text="{x:Bind ViewModel.NewFixedPositionRule.RuleName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         PlaceholderText="请输入规则名称"
                                         MaxLength="100"/>

                                <!-- 规则描述 -->
                                <TextBox Header="规则描述" 
                                         Text="{x:Bind ViewModel.NewFixedPositionRule.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         PlaceholderText="请输入规则描述（可选）"
                                         MaxLength="500"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         Height="80"/>

                                <!-- 启用状态 -->
                                <ToggleSwitch Header="启用规则" 
                                              IsOn="{x:Bind ViewModel.NewFixedPositionRule.IsEnabled, Mode=TwoWay}"/>

                                <!-- 操作按钮 -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Content="提交" 
                                            Command="{x:Bind ViewModel.CreateFixedPositionRuleCommand}"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                    <Button Content="取消" Click="CancelCreateRule_Click"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- 规则编辑表单 -->
                            <StackPanel Spacing="12" 
                                        Visibility="{x:Bind ViewModel.IsEditingRule, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                <TextBlock Text="编辑定岗规则" Style="{StaticResource SubtitleTextBlockStyle}"/>
                                
                                <!-- 验证错误消息 -->
                                <InfoBar x:Name="EditRuleValidationInfoBar"
                                         Severity="Error"
                                         IsOpen="{x:Bind ViewModel.IsRuleValid, Mode=OneWay, Converter={StaticResource InvertedBooleanConverter}}"
                                         Message="{x:Bind ViewModel.RuleValidationMessage, Mode=OneWay}"
                                         IsClosable="False"
                                         Visibility="{x:Bind ViewModel.RuleValidationMessage, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"/>
                                
                                <!-- 哨位选择 -->
                                <StackPanel>
                                    <Grid Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="允许的哨位" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock x:Name="EditSelectedPositionCountText" 
                                                   Grid.Column="2" 
                                                   Text="已选择: 0"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                    <Border BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" 
                                            BorderThickness="1" 
                                            CornerRadius="4"
                                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                                            Padding="4">
                                        <Grid MinHeight="60">
                                            <ListView x:Name="EditPositionsListView"
                                                      ItemsSource="{x:Bind ViewModel.AvailablePositions, Mode=OneWay}"
                                                      SelectionMode="Multiple"
                                                      MaxHeight="120"
                                                      SelectionChanged="EditPositionsListView_SelectionChanged">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate x:DataType="local:PositionDto">
                                                        <TextBlock Text="{x:Bind Name}"/>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                            <TextBlock Text="暂无哨位数据，请先添加哨位"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="8"
                                                       Visibility="{x:Bind ViewModel.AvailablePositions.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}"/>
                                        </Grid>
                                    </Border>
                                </StackPanel>

                                <!-- 时段选择 -->
                                <StackPanel>
                                    <Grid Margin="0,0,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="允许的时段" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock x:Name="EditSelectedTimeSlotCountText" 
                                                   Grid.Column="2" 
                                                   Text="已选择: 0"
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                    <Border BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}" 
                                            BorderThickness="1" 
                                            CornerRadius="4"
                                            Background="{ThemeResource ControlFillColorDefaultBrush}"
                                            Padding="4">
                                        <ListView x:Name="EditTimeSlotsListView"
                                                  SelectionMode="Multiple"
                                                  MaxHeight="200"
                                                  SelectionChanged="EditTimeSlotsListView_SelectionChanged">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="x:Int32">
                                                    <TextBlock>
                                                        <Run Text="{x:Bind}"/>
                                                        <Run Text=" "/>
                                                        <Run Text="{x:Bind Converter={StaticResource PeriodIndexToTimeConverter}}"/>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Border>
                                </StackPanel>

                                <!-- 规则名称 -->
                                <TextBox Header="规则名称*" 
                                         Text="{x:Bind ViewModel.EditingFixedPositionRule.RuleName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         PlaceholderText="请输入规则名称"
                                         MaxLength="100"/>

                                <!-- 规则描述 -->
                                <TextBox Header="规则描述" 
                                         Text="{x:Bind ViewModel.EditingFixedPositionRule.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         PlaceholderText="请输入规则描述（可选）"
                                         MaxLength="500"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         Height="80"/>

                                <!-- 启用状态 -->
                                <ToggleSwitch Header="启用规则" 
                                              IsOn="{x:Bind ViewModel.EditingFixedPositionRule.IsEnabled, Mode=TwoWay}"/>

                                <!-- 操作按钮 -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Content="保存" 
                                            Command="{x:Bind ViewModel.SaveFixedPositionRuleCommand}"
                                            Style="{StaticResource AccentButtonStyle}"/>
                                    <Button Content="取消" 
                                            Command="{x:Bind ViewModel.CancelRuleEditCommand}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- 规则列表显示 -->
                            <StackPanel Spacing="12" 
                                        Visibility="{x:Bind ViewModel.IsCreatingRule, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                                
                                <!-- 添加规则按钮 -->
                                <Button Content="添加定岗规则" 
                                        Click="AddFixedPositionRule_Click"
                                        Style="{StaticResource AccentButtonStyle}"
                                        Visibility="{x:Bind ViewModel.IsEditingRule, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                
                                <!-- 规则列表 -->
                                <ItemsRepeater ItemsSource="{x:Bind ViewModel.FixedPositionRules, Mode=OneWay}">
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="local:FixedAssignmentDto">
                                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                    BorderThickness="1"
                                                    CornerRadius="8"
                                                    Padding="16"
                                                    Margin="0,0,0,8">
                                                <StackPanel Spacing="8">
                                                    <!-- 规则标题和状态 -->
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" 
                                                                   Text="{x:Bind RuleName}" 
                                                                   Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                                        <Border Grid.Column="1" 
                                                                Background="{x:Bind IsEnabled, Converter={StaticResource BoolToBrushConverter}, ConverterParameter='Success|Error'}"
                                                                CornerRadius="4" 
                                                                Padding="8,4">
                                                            <TextBlock Text="{x:Bind IsEnabled, Converter={StaticResource BoolToTextConverter}, ConverterParameter='已启用|已禁用'}" 
                                                                       FontSize="12" 
                                                                       Foreground="White"/>
                                                        </Border>
                                                    </Grid>
                                                    
                                                    <!-- 规则描述 -->
                                                    <TextBlock Text="{x:Bind Description}" 
                                                               TextWrapping="Wrap"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                               Visibility="{x:Bind Description, Converter={StaticResource NullToVisibilityConverter}}"/>
                                                    
                                                    <!-- 允许的哨位 -->
                                                    <StackPanel Spacing="4">
                                                        <TextBlock Text="允许的哨位:" FontWeight="SemiBold" FontSize="12"/>
                                                        <ItemsRepeater ItemsSource="{x:Bind AllowedPositionNames}">
                                                            <ItemsRepeater.Layout>
                                                                <StackLayout Orientation="Horizontal" Spacing="4"/>
                                                            </ItemsRepeater.Layout>
                                                            <ItemsRepeater.ItemTemplate>
                                                                <DataTemplate x:DataType="x:String">
                                                                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}" 
                                                                            CornerRadius="4" 
                                                                            Padding="6,3">
                                                                        <TextBlock Text="{x:Bind}" 
                                                                                   FontSize="12" 
                                                                                   Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsRepeater.ItemTemplate>
                                                        </ItemsRepeater>
                                                    </StackPanel>
                                                    
                                                    <!-- 允许的时段 -->
                                                    <StackPanel Spacing="4">
                                                        <TextBlock Text="允许的时段:" FontWeight="SemiBold" FontSize="12"/>
                                                        <ItemsRepeater ItemsSource="{x:Bind AllowedTimeSlots}">
                                                            <ItemsRepeater.Layout>
                                                                <StackLayout Orientation="Horizontal" Spacing="4"/>
                                                            </ItemsRepeater.Layout>
                                                            <ItemsRepeater.ItemTemplate>
                                                                <DataTemplate x:DataType="x:Int32">
                                                                    <Border Background="{ThemeResource SystemFillColorAttentionBrush}" 
                                                                            CornerRadius="4" 
                                                                            Padding="6,3">
                                                                        <TextBlock FontSize="12">
                                                                            <Run Text="时段"/>
                                                                            <Run Text="{x:Bind}"/>
                                                                        </TextBlock>
                                                                    </Border>
                                                                </DataTemplate>
                                                            </ItemsRepeater.ItemTemplate>
                                                        </ItemsRepeater>
                                                    </StackPanel>
                                                    
                                                    <!-- 有效期 -->
                                                    <TextBlock FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                        <Run Text="有效期: "/>
                                                        <Run Text="{x:Bind StartDate, Converter={StaticResource DateTimeFormatConverter}, ConverterParameter='yyyy-MM-dd'}"/>
                                                        <Run Text=" 至 "/>
                                                        <Run Text="{x:Bind EndDate, Converter={StaticResource DateTimeFormatConverter}, ConverterParameter='yyyy-MM-dd'}"/>
                                                    </TextBlock>
                                                    
                                                    <!-- 操作按钮 -->
                                                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                                        <Button Content="编辑" 
                                                                Command="{Binding ElementName=RootPage, Path=ViewModel.StartEditRuleCommand}"
                                                                CommandParameter="{x:Bind}"
                                                                Style="{StaticResource AccentButtonStyle}"/>
                                                        <Button Content="删除" 
                                                                Command="{Binding ElementName=RootPage, Path=ViewModel.DeleteFixedPositionRuleCommand}"
                                                                CommandParameter="{x:Bind}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>
                                
                                <!-- 空状态提示 -->
                                <TextBlock Text="暂无定岗规则，点击上方按钮添加" 
                                           Visibility="{x:Bind ViewModel.FixedPositionRules.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           HorizontalAlignment="Center"
                                           Margin="0,24,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- 状态控件 -->
        <controls:LoadingIndicator IsLoading="{x:Bind ViewModel.IsBusy, Mode=OneWay}" Grid.RowSpan="2"/>
        <controls:EmptyState IsVisible="{x:Bind ViewModel.ShowEmptyState, Mode=OneWay}"
                             Title="暂无人员"
                             Subtitle="您还没有添加任何人员信息。"
                             ButtonText="添加人员"
                             ButtonCommand="{x:Bind ViewModel.CreateCommand}"
                             Grid.Row="1"/>
        <controls:ErrorState IsVisible="{x:Bind ViewModel.ShowErrorState, Mode=OneWay}"
                             Title="加载失败"
                             Message="{x:Bind ViewModel.ErrorMessage, Mode=OneWay}"
                             RetryCommand="{x:Bind ViewModel.RefreshCommand}"
                             Grid.Row="1"/>
    </Grid>
</Page>
