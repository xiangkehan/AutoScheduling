<ContentDialog
    x:Class="AutoScheduling3.Views.DataManagement.SkillEditDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dto="using:AutoScheduling3.DTOs"
    mc:Ignorable="d"
    Title="编辑技能"
    PrimaryButtonText="保存"
    SecondaryButtonText="取消"
    DefaultButton="Primary"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    Opened="ContentDialog_Opened">

    <ScrollViewer MaxHeight="400">
        <StackPanel Spacing="12">
            <!-- 技能名称 -->
            <StackPanel>
                <TextBox x:Name="NameTextBox"
                         Header="技能名称*"
                         PlaceholderText="请输入技能名称"
                         MaxLength="50"
                         TabIndex="0"
                         TextChanged="ValidateInput"/>
                <TextBlock x:Name="NameErrorText"
                           Foreground="Red"
                           FontSize="12"
                           Margin="0,4,0,0"
                           Visibility="Collapsed"/>
            </StackPanel>

            <!-- 技能描述 -->
            <StackPanel>
                <TextBox x:Name="DescriptionTextBox"
                         Header="技能描述"
                         PlaceholderText="请输入技能描述（可选）"
                         MaxLength="200"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Height="80"
                         TabIndex="1"
                         TextChanged="ValidateInput"/>
                <TextBlock x:Name="DescriptionErrorText"
                           Foreground="Red"
                           FontSize="12"
                           Margin="0,4,0,0"
                           Visibility="Collapsed"/>
            </StackPanel>

            <!-- 验证错误提示 -->
            <InfoBar x:Name="ValidationErrorBar"
                     Severity="Error"
                     IsOpen="False"
                     IsClosable="True"/>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>
