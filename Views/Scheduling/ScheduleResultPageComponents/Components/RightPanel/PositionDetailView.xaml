<UserControl
    x:Class="AutoScheduling3.Views.Scheduling.ScheduleResultPageComponents.Components.RightPanel.PositionDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <StackPanel Spacing="16">
        <!-- 基本信息 -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="0" Text="名称:" Margin="0,0,8,0" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Grid.Row="0" Text="{x:Bind Position.Name, Mode=OneWay}" VerticalAlignment="Center"/>

            <TextBlock Grid.Column="0" Grid.Row="1" Text="编号:" Margin="0,0,8,0" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Grid.Row="1" Text="{x:Bind Position.Id, Mode=OneWay}" VerticalAlignment="Center"/>

            <TextBlock Grid.Column="0" Grid.Row="2" Text="位置:" Margin="0,0,8,0" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Grid.Row="2" Text="{x:Bind Position.Location, Mode=OneWay}" VerticalAlignment="Center"/>

            <TextBlock Grid.Column="0" Grid.Row="3" Text="介绍:" Margin="0,0,8,0" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1" Grid.Row="3" Text="{x:Bind Position.Description, Mode=OneWay}" VerticalAlignment="Center"/>
        </Grid>

        <!-- 技能要求 -->
        <StackPanel>
            <TextBlock Text="技能要求:" Margin="0,8,0,4"/>
            <ItemsControl ItemsSource="{x:Bind Position.RequiredSkillNames, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <TextBlock Text="{Binding}" Margin="0,2,0,2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- 排班统计 -->
        <StackPanel>
            <TextBlock Text="排班统计:" Margin="0,8,0,4"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Text="总班次:" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{x:Bind TotalShifts, Mode=OneWay}" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="0" Grid.Row="1" Text="已排班:" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{x:Bind ScheduledShifts, Mode=OneWay}" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="0" Grid.Row="2" Text="空缺班次:" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Grid.Row="2" Text="{x:Bind VacantShifts, Mode=OneWay}" VerticalAlignment="Center"/>

                <TextBlock Grid.Column="0" Grid.Row="3" Text="覆盖率:" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Grid.Row="3" Text="{x:Bind CoverageRate, Mode=OneWay}" VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>

        <!-- 近期排班 -->
        <StackPanel>
            <TextBlock Text="近期排班:" Margin="0,8,0,4"/>
            <ItemsControl ItemsSource="{x:Bind RecentShifts, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8" Margin="0,2,0,2">
                            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Date, Mode=OneWay}" Width="100"/>
                                <TextBlock Text="{Binding PersonnelName, Mode=OneWay}" Width="120"/>
                                <TextBlock Text="{Binding ShiftTime, Mode=OneWay}" Width="150"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </StackPanel>
</UserControl>