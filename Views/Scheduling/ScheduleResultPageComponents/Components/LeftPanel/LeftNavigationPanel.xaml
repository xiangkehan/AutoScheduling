<UserControl
    x:Class="AutoScheduling3.Views.Scheduling.ScheduleResultPageComponents.Components.LeftPanel.LeftNavigationPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:AutoScheduling3.ViewModels.Scheduling"
    xmlns:converters="using:AutoScheduling3.Converters"
    mc:Ignorable="d"
    x:Name="LeftPanelRoot"
    d:DataContext="{d:DesignInstance Type=viewmodels:ScheduleResultViewModel}">

    <UserControl.Resources>
        <converters:ConflictTypeToColorConverter x:Key="ConflictTypeToColorConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <converters:DateTimeFormatConverter x:Key="DateTimeFormatConverter"/>
    </UserControl.Resources>

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- 排班信息 -->
            <RowDefinition Height="Auto"/> <!-- 统计摘要 -->
            <RowDefinition Height="*"/>    <!-- 冲突列表 -->
            <RowDefinition Height="Auto"/> <!-- 折叠按钮 -->
        </Grid.RowDefinitions>

        <!-- 排班信息卡片 -->
        <Border Grid.Row="0" 
                Margin="12,12,12,8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
            <StackPanel Spacing="8">
                <TextBlock Text="{Binding Schedule.Title, FallbackValue='排班结果'}"
                           Style="{ThemeResource SubtitleTextBlockStyle}"
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"/>
                
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <!-- 状态标识 -->
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                            CornerRadius="4"
                            Padding="6,2"
                            Visibility="{Binding Schedule.ConfirmedAt, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter='invert'}">
                        <TextBlock Text="草稿" 
                                   FontSize="11"
                                   Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                    </Border>
                    <Border Background="{ThemeResource SystemFillColorSuccessBrush}"
                            CornerRadius="4"
                            Padding="6,2"
                            Visibility="{Binding Schedule.ConfirmedAt, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="已确认" 
                                   FontSize="11"
                                   Foreground="White"/>
                    </Border>
                </StackPanel>

                <!-- 日期范围 -->
                <TextBlock FontSize="12" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    <Run Text="{Binding Schedule.StartDate, Converter={StaticResource DateTimeFormatConverter}, ConverterParameter='yyyy-MM-dd'}"/>
                    <Run Text=" 至 "/>
                    <Run Text="{Binding Schedule.EndDate, Converter={StaticResource DateTimeFormatConverter}, ConverterParameter='yyyy-MM-dd'}"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- 统计摘要卡片 -->
        <Border Grid.Row="1" 
                Margin="12,0,12,8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
            <StackPanel Spacing="12">
                <TextBlock Text="统计摘要" 
                           Style="{ThemeResource BodyStrongTextBlockStyle}"/>

                <!-- 硬约束冲突 -->
                <Button Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Command="{Binding SelectStatisticCommand}"
                        CommandParameter="HardConflict">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE7BA;"
                                  FontSize="20"
                                  Foreground="#D13438"
                                  Margin="0,0,12,0"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="硬约束冲突" 
                                       FontSize="13"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2"
                                   Text="{Binding StatisticsSummary.HardConflictCount}"
                                   Style="{ThemeResource TitleTextBlockStyle}"
                                   Foreground="#D13438"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>

                <!-- 软约束冲突 -->
                <Button Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Command="{Binding SelectStatisticCommand}"
                        CommandParameter="SoftConflict">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE7BA;"
                                  FontSize="20"
                                  Foreground="#FFC83D"
                                  Margin="0,0,12,0"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="软约束冲突" 
                                       FontSize="13"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2"
                                   Text="{Binding StatisticsSummary.SoftConflictCount}"
                                   Style="{ThemeResource TitleTextBlockStyle}"
                                   Foreground="#FFC83D"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>

                <!-- 未分配班次 -->
                <Button Background="Transparent"
                        BorderThickness="0"
                        Padding="0"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        Command="{Binding SelectStatisticCommand}"
                        CommandParameter="Unassigned">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <FontIcon Grid.Column="0"
                                  Glyph="&#xE894;"
                                  FontSize="20"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                  Margin="0,0,12,0"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="未分配班次" 
                                       FontSize="13"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2"
                                   Text="{Binding StatisticsSummary.UnassignedCount}"
                                   Style="{ThemeResource TitleTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Button>
            </StackPanel>
        </Border>

        <!-- 冲突列表 -->
        <Border Grid.Row="2" 
                Margin="12,0,12,8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 标题栏 -->
                <Grid Grid.Row="0" Padding="16,12">
                    <TextBlock Text="冲突列表" 
                               Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                </Grid>

                <!-- 冲突列表内容 -->
                <ScrollViewer Grid.Row="1">
                    <ItemsRepeater ItemsSource="{Binding ConflictList}"
                                   Margin="8,0,8,8">
                        <ItemsRepeater.Layout>
                            <StackLayout Spacing="4"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate>
                                <Button Background="{ThemeResource SubtleFillColorTransparentBrush}"
                                        BorderThickness="1"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        CornerRadius="6"
                                        Padding="12,8"
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Stretch"
                                        Command="{Binding DataContext.SelectConflictCommand, ElementName=LeftPanelRoot}"
                                        CommandParameter="{Binding}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- 冲突图标 -->
                                        <FontIcon Grid.Column="0"
                                                  Glyph="&#xE7BA;"
                                                  FontSize="16"
                                                  Margin="0,0,8,0"
                                                  VerticalAlignment="Top"
                                                  Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>

                                        <!-- 冲突信息 -->
                                        <StackPanel Grid.Column="1" Spacing="4">
                                            <TextBlock Text="{Binding Category}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock FontSize="12"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       TextWrapping="Wrap">
                                                <Run Text="{Binding PersonnelName}"/>
                                                <Run Text=" - "/>
                                                <Run Text="{Binding PositionName}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- 折叠按钮 -->
        <Button Grid.Row="3"
                Margin="12,0,12,12"
                HorizontalAlignment="Stretch"
                Command="{Binding ToggleLeftPanelCommand}">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <FontIcon Glyph="&#xE76B;" FontSize="14"/>
                <TextBlock Text="折叠" FontSize="13"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
