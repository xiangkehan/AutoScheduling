<UserControl
    x:Class="AutoScheduling3.Views.Scheduling.ScheduleResultPageComponents.Components.MainContent.GridView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:AutoScheduling3.Views.Scheduling.ScheduleResultPageComponents.Components.MainContent"
    xmlns:shared="using:AutoScheduling3.Views.Scheduling.ScheduleResultPageComponents.Components.Shared"
    xmlns:viewmodels="using:AutoScheduling3.ViewModels.Scheduling"
    xmlns:dto="using:AutoScheduling3.DTOs"
    xmlns:converters="using:AutoScheduling3.Converters"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodels:ScheduleResultViewModel}"
    Background="Transparent">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <!-- 网格视图容器 -->
        <ScrollViewer x:Name="GridScrollViewer"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollMode="Enabled"
                      VerticalScrollMode="Enabled">
            <Grid x:Name="GridContainer" Padding="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- 列标题行 -->
                    <RowDefinition Height="*"/>    <!-- 数据行 -->
                </Grid.RowDefinitions>

                <!-- 列标题行 -->
                <Grid Grid.Row="0" 
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1"
                      CornerRadius="4,4,0,0"
                      Padding="8,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/> <!-- 日期时段列 -->
                        <ColumnDefinition Width="*"/>   <!-- 哨位列 -->
                    </Grid.ColumnDefinitions>

                    <!-- 左上角标题 -->
                    <Border Grid.Column="0"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="0,0,1,0"
                            Padding="12,0">
                        <TextBlock Text="日期 / 时段" 
                                   Style="{ThemeResource BodyStrongTextBlockStyle}"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- 哨位列标题 -->
                    <ItemsRepeater Grid.Column="1"
                                   ItemsSource="{x:Bind ViewModel.GridData.Columns, Mode=OneWay}">
                        <ItemsRepeater.Layout>
                            <StackLayout Orientation="Horizontal" Spacing="0"/>
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="dto:ScheduleGridColumn">
                                <Border Width="120"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,1,0"
                                        Padding="8,0">
                                    <TextBlock Text="{x:Bind PositionName}" 
                                               Style="{ThemeResource BodyStrongTextBlockStyle}"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </Grid>

                <!-- 数据行 -->
                <ItemsRepeater Grid.Row="1"
                               ItemsSource="{x:Bind ViewModel.ScheduleGrid, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Vertical" Spacing="0"/>
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:ScheduleRowViewModel">
                            <Grid Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                  BorderThickness="1,0,1,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="180"/> <!-- 日期时段列 -->
                                    <ColumnDefinition Width="*"/>   <!-- 单元格列 -->
                                </Grid.ColumnDefinitions>

                                <!-- 行标题（日期+时段） -->
                                <Border Grid.Column="0"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="0,0,1,0"
                                        Background="{ThemeResource LayerFillColorDefaultBrush}"
                                        Padding="12,8">
                                    <TextBlock Text="{x:Bind RowHeader}" 
                                               Style="{ThemeResource BodyTextBlockStyle}"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- 单元格行 -->
                                <ItemsRepeater Grid.Column="1"
                                               ItemsSource="{x:Bind Cells}">
                                    <ItemsRepeater.Layout>
                                        <StackLayout Orientation="Horizontal" Spacing="0"/>
                                    </ItemsRepeater.Layout>
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="viewmodels:ScheduleCellViewModel">
                                            <shared:ScheduleCell DataContext="{x:Bind}"/>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>
                            </Grid>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </Grid>
        </ScrollViewer>

        <!-- 空状态提示 -->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16"
                    Visibility="{x:Bind ViewModel.ScheduleGrid.Count, Mode=OneWay, Converter={StaticResource ZeroToVisibilityConverter}}">
            <FontIcon Glyph="&#xE9F3;" 
                      FontSize="48"
                      Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
            <TextBlock Text="暂无排班数据" 
                       Style="{ThemeResource SubtitleTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </Grid>
</UserControl>
