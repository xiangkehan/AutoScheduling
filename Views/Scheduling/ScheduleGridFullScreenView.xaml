<UserControl
    x:Class="AutoScheduling3.Views.Scheduling.ScheduleGridFullScreenView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:AutoScheduling3.Controls"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="800">

    <Grid x:Name="RootGrid" Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <!-- 标题栏 -->
            <RowDefinition Height="Auto"/>
            <!-- 表格内容 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Grid Grid.Row="0" 
              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
              BorderThickness="0,0,0,1"
              Padding="24,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 标题 -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="4">
                <TextBlock Text="排班结果表格"
                           Style="{StaticResource TitleTextStyle}"
                           AutomationProperties.HeadingLevel="Level1"/>
                <TextBlock x:Name="SubtitleText"
                           Text="全屏查看模式"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           FontSize="14"/>
            </StackPanel>

            <!-- 关闭按钮 -->
            <Button Grid.Column="1"
                    x:Name="CloseButton"
                    Content="&#xE711;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Width="40"
                    Height="40"
                    VerticalAlignment="Center"
                    ToolTipService.ToolTip="关闭全屏视图 (Esc)"
                    Click="CloseButton_Click"
                    AutomationProperties.Name="关闭全屏视图"
                    AutomationProperties.AccessKey="Escape">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Escape"/>
                </Button.KeyboardAccelerators>
            </Button>
        </Grid>

        <!-- 表格内容区域 -->
        <Border Grid.Row="1" 
                Padding="24"
                Background="{ThemeResource LayerFillColorDefaultBrush}">
            <controls:ScheduleGridControl x:Name="GridControl"
                                          GridData="{x:Bind GridData, Mode=OneWay}"
                                          FullScreenRequested="GridControl_FullScreenRequested"
                                          ExportRequested="GridControl_ExportRequested"/>
        </Border>
    </Grid>
</UserControl>
