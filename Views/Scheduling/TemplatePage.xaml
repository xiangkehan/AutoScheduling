<Page
    x:Class="AutoScheduling3.Views.Scheduling.TemplatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AutoScheduling3.Views.Scheduling"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:dto="using:AutoScheduling3.DTOs"
    xmlns:viewmodels="using:AutoScheduling3.ViewModels.Scheduling"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:DataContext="{d:DesignInstance Type=viewmodels:TemplateViewModel, IsDesignTimeCreatable=True}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <DataTemplate x:Key="PersonnelListItemTemplate" x:DataType="dto:PersonnelDto">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind PositionName}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </DataTemplate>
                    <DataTemplate x:Key="PositionListItemTemplate" x:DataType="dto:PositionDto">
                        <StackPanel>
                            <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{x:Bind Location}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
                        </StackPanel>
                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CommandBar Grid.Row="0" Background="Transparent" DefaultLabelPosition="Right">
            <AppBarButton Icon="Add" Label="New Template" Command="{Binding CreateTemplateCommand}"/>
            <AppBarSeparator/>
            <AppBarButton Icon="Refresh" Label="Refresh" Command="{Binding LoadTemplatesCommand}"/>
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <AutoSuggestBox QueryIcon="Find" PlaceholderText="Search templates..." Text="{Binding SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding SearchSuggestions}" Style="{StaticResource DefaultAutoSuggestBoxStyle}" MinWidth="250"/>
                </StackPanel>
            </CommandBar.Content>
        </CommandBar>

        <SplitView Grid.Row="1"
                   IsPaneOpen="{Binding IsDetailPaneOpen, Mode=TwoWay}"
                   PanePlacement="Right"
                   DisplayMode="Inline"
                   OpenPaneLength="500">
            <SplitView.Pane>
                <Grid BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1,0,0,0}">
                    <ScrollViewer>
                        <StackPanel Padding="16" Spacing="16">
                            <TextBlock Text="{Binding SelectedTemplate.Name, FallbackValue='Select a Template'}" Style="{ThemeResource TitleTextBlockStyle}"/>

                            <StackPanel Spacing="8">
                                <TextBox Header="Template Name" Text="{Binding SelectedTemplate.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBox Header="Description" Text="{Binding SelectedTemplate.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="96" TextWrapping="Wrap" AcceptsReturn="True"/>
                                <ComboBox Header="Template Type" ItemsSource="{Binding TemplateTypes}" SelectedItem="{Binding SelectedTemplate.TemplateType, Mode=TwoWay}"/>
                                <ToggleSwitch Header="Default Template" IsOn="{Binding SelectedTemplate.IsDefault, Mode=TwoWay}"/>
                            </StackPanel>

                            <Expander Header="Participating Personnel" IsExpanded="True">
                                <Grid MinHeight="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ListView Grid.Column="0" ItemsSource="{Binding AvailablePersonnel}" ItemTemplate="{StaticResource PersonnelListItemTemplate}" SelectionMode="Multiple"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                                        <Button Content="&gt;&gt;"/>
                                        <Button Content="&lt;&lt;"/>
                                    </StackPanel>
                                    <ListView Grid.Column="2" ItemsSource="{Binding SelectedPersonnel}" ItemTemplate="{StaticResource PersonnelListItemTemplate}" SelectionMode="Multiple"/>
                                </Grid>
                            </Expander>

                            <Expander Header="Participating Positions" IsExpanded="True">
                                <Grid MinHeight="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ListView Grid.Column="0" ItemsSource="{Binding AvailablePositions}" ItemTemplate="{StaticResource PositionListItemTemplate}" SelectionMode="Multiple"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                                        <Button Content="&gt;&gt;"/>
                                        <Button Content="&lt;&lt;"/>
                                    </StackPanel>
                                    <ListView Grid.Column="2" ItemsSource="{Binding SelectedPositions}" ItemTemplate="{StaticResource PositionListItemTemplate}" SelectionMode="Multiple"/>
                                </Grid>
                            </Expander>

                            <Expander Header="Constraint Configuration" IsExpanded="True">
                                <!-- Constraint Configuration UI Here -->
                                <TextBlock Text="Constraint configuration will be implemented here."/>
                            </Expander>

                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,16,0,0">
                                <Button Content="Save" Style="{ThemeResource AccentButtonStyle}" Command="{Binding SaveTemplateCommand}"/>
                                <Button Content="Delete" Command="{Binding DeleteTemplateCommand}"/>
                                <Button Content="Duplicate" Command="{Binding DuplicateTemplateCommand}"/>
                                <Button Content="Use Template" Command="{Binding UseTemplateCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                    <ProgressRing IsActive="{Binding IsLoadingDetails}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="50" Height="50"/>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <controls:AdaptiveGridView
                        ItemsSource="{Binding Templates}"
                        SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}"
                        SelectionMode="Single"
                        Padding="12"
                        ItemHeight="200"
                        DesiredWidth="300"
                        StretchContentForSingleRow="False">
                        <controls:AdaptiveGridView.ItemTemplate>
                            <DataTemplate x:DataType="dto:SchedulingTemplateDto">
                                <Grid Margin="4">
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                        <StackPanel Padding="12" Spacing="4">
                                            <TextBlock Text="{x:Bind Name}" Style="{ThemeResource SubtitleTextBlockStyle}" MaxLines="2" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{x:Bind Description}" Style="{ThemeResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" MaxLines="3" TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                                <controls:Badge Content="{x:Bind TemplateType}"/>
                                                <FontIcon Glyph="&#xE734;" Visibility="{x:Bind IsDefault, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" Foreground="{ThemeResource SystemAccentColor}"/>
                                            </StackPanel>
                                            <Grid Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="Personnel" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                                    <TextBlock Text="{x:Bind PersonnelIds.Count}" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Positions" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                                    <TextBlock Text="{x:Bind PositionIds.Count}" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                                </StackPanel>
                                            </Grid>
                                            <TextBlock Text="{x:Bind CreatedAt, Converter={StaticResource DateTimeFormatConverter}}" Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </controls:AdaptiveGridView.ItemTemplate>
                    </controls:AdaptiveGridView>
                    <ProgressRing IsActive="{Binding IsLoading}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="50" Height="50"/>
                    <TextBlock Text="No templates found. Create one to get started."
                               Visibility="{Binding Templates.Count, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=invert, Mode=OneWay}"
                               HorizontalAlignment="Center" VerticalAlignment="Center" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
