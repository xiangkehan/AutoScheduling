<Page
 x:Class="AutoScheduling3.Views.Scheduling.TemplatePage"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:dto="using:AutoScheduling3.DTOs"
 xmlns:models="using:AutoScheduling3.Models.Constraints"
 xmlns:converters="using:AutoScheduling3.Converters"
 xmlns:viewmodels="using:AutoScheduling3.ViewModels.Scheduling"
 mc:Ignorable="d"
 Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
 d:DataContext="{d:DesignInstance Type=viewmodels:TemplateViewModel, IsDesignTimeCreatable=True}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" Inverted="False"/>
        <converters:BoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter" Inverted="True"/>
        <converters:DateTimeFormatConverter x:Key="DateTimeFormatConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <DataTemplate x:Key="PersonnelListItemTemplate" x:DataType="dto:PersonnelDto">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                <TextBlock Text="技能: {x:Bind SkillIds.Count}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="PositionListItemTemplate" x:DataType="dto:PositionDto">
            <StackPanel>
                <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                <TextBlock Text="{x:Bind Location}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CommandBar Grid.Row="0" Background="Transparent" DefaultLabelPosition="Right">
            <AppBarButton Icon="Add" Label="新建模板" Command="{Binding CreateTemplateCommand}"/>
            <AppBarSeparator/>
            <AppBarButton Icon="Refresh" Label="刷新" Command="{Binding LoadTemplatesCommand}"/>
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <AutoSuggestBox QueryIcon="Find" PlaceholderText="搜索模板..." Text="{Binding SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource DefaultAutoSuggestBoxStyle}" MinWidth="250"/>
                </StackPanel>
            </CommandBar.Content>
        </CommandBar>

        <SplitView Grid.Row="1"
 IsPaneOpen="{Binding IsDetailPaneOpen, Mode=TwoWay}"
 PanePlacement="Right"
 DisplayMode="Inline"
 OpenPaneLength="500">
            <SplitView.Pane>
                <Grid BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Padding="16" Spacing="16" Visibility="{Binding SelectedTemplate, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="{Binding SelectedTemplate.Name, FallbackValue='Select a Template'}" Style="{ThemeResource TitleTextBlockStyle}"/>

                            <StackPanel Spacing="8">
                                <TextBox Header="Template Name" Text="{Binding SelectedTemplate.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBox Header="Description" Text="{Binding SelectedTemplate.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="96" TextWrapping="Wrap" AcceptsReturn="True"/>
                                <ComboBox Header="Template Type" ItemsSource="{Binding TemplateTypes}" SelectedItem="{Binding SelectedTemplate.TemplateType, Mode=TwoWay}"/>
                                <ToggleSwitch Header="Default Template" IsOn="{Binding SelectedTemplate.IsDefault, Mode=TwoWay}"/>
                            </StackPanel>

                            <Expander IsExpanded="True">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Participating Personnel ("/>
                                        <TextBlock Text="{Binding SelectedPersonnel.Count}"/>
                                        <TextBlock Text=")"/>
                                    </StackPanel>
                                </Expander.Header>
                                <Grid MinHeight="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ListView x:Name="AvailablePersonnelList" Grid.Column="0" Header="Available" ItemsSource="{Binding AvailablePersonnel}" ItemTemplate="{StaticResource PersonnelListItemTemplate}" SelectionMode="Multiple"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                                        <Button Content="&gt;&gt;" Click="AddPersonnel_Click" ToolTipService.ToolTip="Add Selected"/>
                                        <Button Content="&lt;&lt;" Click="RemovePersonnel_Click" ToolTipService.ToolTip="Remove Selected"/>
                                    </StackPanel>
                                    <ListView x:Name="SelectedPersonnelList" Grid.Column="2" Header="Selected" ItemsSource="{Binding SelectedPersonnel}" ItemTemplate="{StaticResource PersonnelListItemTemplate}" SelectionMode="Multiple"/>
                                </Grid>
                            </Expander>

                            <Expander IsExpanded="True">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="Participating Positions ("/>
                                        <TextBlock Text="{Binding SelectedPositions.Count}"/>
                                        <TextBlock Text=")"/>
                                    </StackPanel>
                                </Expander.Header>
                                <Grid MinHeight="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ListView x:Name="AvailablePositionsList" Grid.Column="0" Header="Available" ItemsSource="{Binding AvailablePositions}" ItemTemplate="{StaticResource PositionListItemTemplate}" SelectionMode="Multiple"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                                        <Button Content="&gt;&gt;" Click="AddPosition_Click" ToolTipService.ToolTip="Add Selected"/>
                                        <Button Content="&lt;&lt;" Click="RemovePosition_Click" ToolTipService.ToolTip="Remove Selected"/>
                                    </StackPanel>
                                    <ListView x:Name="SelectedPositionsList" Grid.Column="2" Header="Selected" ItemsSource="{Binding SelectedPositions}" ItemTemplate="{StaticResource PositionListItemTemplate}" SelectionMode="Multiple"/>
                                </Grid>
                            </Expander>

                            <Expander Header="Constraint Configuration" IsExpanded="True">
                                <StackPanel Spacing="12">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Holiday Configuration" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                        <ToggleSwitch IsOn="{Binding SelectedTemplate.UseActiveHolidayConfig, Mode=TwoWay}" OffContent="Use a specific configuration" OnContent="Use the active configuration"/>
                                        <ComboBox Header="Holiday Configuration" ItemsSource="{Binding HolidayConfigs}"
 SelectedValue="{Binding SelectedTemplate.HolidayConfigId, Mode=TwoWay, FallbackValue=-1}"
 SelectedValuePath="Id" DisplayMemberPath="ConfigName"
 IsEnabled="{Binding SelectedTemplate.UseActiveHolidayConfig, Converter={StaticResource InvertedBoolToVisibilityConverter}, Mode=OneWay}"/>
                                    </StackPanel>

                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Fixed Position Rules" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                        <ListView ItemsSource="{Binding FixedPositionRules}" SelectionMode="None" MaxHeight="200">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="models:FixedPositionRule">
                                                    <CheckBox Content="{x:Bind Description}" IsChecked="{x:Bind IsEnabled, Mode=TwoWay}"/>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </StackPanel>
                                    <InfoBar Severity="Informational" Title="Manual Assignments" Message="Manual assignments are date-specific and cannot be edited within a template." IsOpen="True"/>
                                </StackPanel>
                            </Expander>

                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,16,0,0">
                                <Button Content="Save" Style="{ThemeResource AccentButtonStyle}" Command="{Binding SaveTemplateCommand}"/>
                                <Button Content="Delete" Command="{Binding DeleteTemplateCommand}" IsEnabled="{Binding SelectedTemplate.IsDefault, Converter={StaticResource InvertedBoolToVisibilityConverter}}"/>
                                <Button Content="Duplicate" Command="{Binding DuplicateTemplateCommand}"/>
                                <Button Content="Use Template" Command="{Binding UseTemplateCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                    <ProgressRing IsActive="{Binding IsLoadingDetails}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="50" Height="50"/>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <GridView ItemsSource="{Binding Templates}"
                        SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}"
                        SelectionMode="Single"
                        IsItemClickEnabled="True"
                        Padding="12">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Horizontal" ItemWidth="300" ItemHeight="200"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="dto:SchedulingTemplateDto">
                                <Grid Margin="4">
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                        <StackPanel Padding="12" Spacing="4">
                                            <TextBlock Text="{x:Bind Name}" Style="{ThemeResource SubtitleTextBlockStyle}" MaxLines="2" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{x:Bind Description, FallbackValue='No description'}" Style="{ThemeResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" MaxLines="3" TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                                <Border Background="{ThemeResource SystemAccentColorLight2}" CornerRadius="4" Padding="6,2">
                                                    <TextBlock Text="{x:Bind TemplateType}" Foreground="{ThemeResource TextFillColorPrimaryBrush}" FontSize="12"/>
                                                </Border>
                                                <FontIcon Glyph="&#xE734;" Visibility="{x:Bind IsDefault, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" Foreground="{ThemeResource SystemAccentColor}" ToolTipService.ToolTip="Default Template"/>
                                            </StackPanel>
                                            <Grid Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="Personnel" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                                    <TextBlock Text="{x:Bind PersonnelIds.Count}" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Positions" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                                    <TextBlock Text="{x:Bind PositionIds.Count}" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                                </StackPanel>
                                            </Grid>
                                            <TextBlock Text="{x:Bind CreatedAt, Converter={StaticResource DateTimeFormatConverter}, ConverterParameter='Created: yyyy-MM-dd'}" Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                    <ProgressRing IsActive="{Binding IsLoading}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="50" Height="50"/>
                    <TextBlock Text="No templates found. Create one to get started."
 Visibility="{Binding Templates.Count, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=invert, Mode=OneWay}"
 HorizontalAlignment="Center" VerticalAlignment="Center" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
