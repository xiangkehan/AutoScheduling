<Page
    x:Class="AutoScheduling3.Views.Scheduling.TemplatePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dto="using:AutoScheduling3.DTOs"
    xmlns:models="using:AutoScheduling3.Models.Constraints"
    xmlns:converters="using:AutoScheduling3.Converters"
    xmlns:viewmodels="using:AutoScheduling3.ViewModels.Scheduling"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    d:DataContext="{d:DesignInstance Type=viewmodels:TemplateViewModel, IsDesignTimeCreatable=True}">

    <Page.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" Inverted="False"/>
        <converters:BoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter" Inverted="True"/>
        <converters:InvertedBooleanConverter x:Key="InvertedBooleanConverter"/>
        <converters:DateTimeFormatConverter x:Key="DateTimeFormatConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <DataTemplate x:Key="PersonnelListItemTemplate" x:DataType="dto:PersonnelDto">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                <TextBlock Text="技能: {x:Bind SkillIds.Count}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="PositionListItemTemplate" x:DataType="dto:PositionDto">
            <StackPanel>
                <TextBlock Text="{x:Bind Name}" FontWeight="SemiBold"/>
                <TextBlock Text="{x:Bind Location}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <CommandBar Grid.Row="0" Background="Transparent" DefaultLabelPosition="Right">
            <AppBarButton Icon="Add" Label="新建模板" Command="{Binding CreateTemplateCommand}"/>
            <AppBarSeparator/>
            <AppBarButton Icon="Refresh" Label="刷新" Command="{Binding LoadTemplatesCommand}"/>
            <CommandBar.Content>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <AutoSuggestBox QueryIcon="Find" PlaceholderText="搜索模板..." Text="{Binding SearchKeyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource DefaultAutoSuggestBoxStyle}" MinWidth="250"/>
                </StackPanel>
            </CommandBar.Content>
        </CommandBar>

        <SplitView Grid.Row="1"
                   IsPaneOpen="{Binding IsDetailPaneOpen, Mode=TwoWay}"
                   PanePlacement="Right"
                   DisplayMode="Inline"
                   OpenPaneLength="500">
            <SplitView.Pane>
                <Grid BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Padding="16" Spacing="16" Visibility="{Binding SelectedTemplate, Converter={StaticResource NullToVisibilityConverter}}">
                            <TextBlock Text="{Binding SelectedTemplate.Name, FallbackValue='选择一个模板'}" Style="{ThemeResource TitleTextBlockStyle}"/>

                            <StackPanel Spacing="8">
                                <TextBox Header="模板名称" Text="{Binding SelectedTemplate.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBox Header="描述" Text="{Binding SelectedTemplate.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="96" TextWrapping="Wrap" AcceptsReturn="True"/>
                                <ComboBox Header="模板类型" ItemsSource="{Binding TemplateTypes}" SelectedItem="{Binding SelectedTemplate.TemplateType, Mode=TwoWay}"/>
                                <ToggleSwitch Header="默认模板" IsOn="{Binding SelectedTemplate.IsDefault, Mode=TwoWay}"/>
                            </StackPanel>

                            <Expander IsExpanded="True">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="参与人员 ("/>
                                        <TextBlock Text="{Binding SelectedPersonnel.Count}"/>
                                        <TextBlock Text=")"/>
                                    </StackPanel>
                                </Expander.Header>
                                <Grid MinHeight="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ListView x:Name="AvailablePersonnelList" Grid.Column="0" Header="可用" ItemsSource="{Binding AvailablePersonnel}" ItemTemplate="{StaticResource PersonnelListItemTemplate}" SelectionMode="Multiple"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                                        <Button Content="&gt;&gt;" Click="AddPersonnel_Click" ToolTipService.ToolTip="添加选中"/>
                                        <Button Content="&lt;&lt;" Click="RemovePersonnel_Click" ToolTipService.ToolTip="移除选中"/>
                                    </StackPanel>
                                    <ListView x:Name="SelectedPersonnelList" Grid.Column="2" Header="已选" ItemsSource="{Binding SelectedPersonnel}" ItemTemplate="{StaticResource PersonnelListItemTemplate}" SelectionMode="Multiple"/>
                                </Grid>
                            </Expander>

                            <Expander IsExpanded="True">
                                <Expander.Header>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="参与岗位 ("/>
                                        <TextBlock Text="{Binding SelectedPositions.Count}"/>
                                        <TextBlock Text=")"/>
                                    </StackPanel>
                                </Expander.Header>
                                <Grid MinHeight="200">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ListView x:Name="AvailablePositionsList" Grid.Column="0" Header="可用" ItemsSource="{Binding AvailablePositions}" ItemTemplate="{StaticResource PositionListItemTemplate}" SelectionMode="Multiple"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="8">
                                        <Button Content="&gt;&gt;" Click="AddPosition_Click" ToolTipService.ToolTip="添加选中"/>
                                        <Button Content="&lt;&lt;" Click="RemovePosition_Click" ToolTipService.ToolTip="移除选中"/>
                                    </StackPanel>
                                    <ListView x:Name="SelectedPositionsList" Grid.Column="2" Header="已选" ItemsSource="{Binding SelectedPositions}" ItemTemplate="{StaticResource PositionListItemTemplate}" SelectionMode="Multiple"/>
                                </Grid>
                            </Expander>

                            <Expander Header="约束配置" IsExpanded="True">
                                <StackPanel Spacing="12">
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="节假日配置" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                        <ToggleSwitch IsOn="{Binding SelectedTemplate.UseActiveHolidayConfig, Mode=TwoWay}" OffContent="使用特定配置" OnContent="使用当前激活的配置"/>
                                        <ComboBox Header="节假日配置" ItemsSource="{Binding HolidayConfigs}"
                                                  SelectedValue="{Binding SelectedTemplate.HolidayConfigId, Mode=TwoWay, FallbackValue=-1}"
                                                  SelectedValuePath="Id" DisplayMemberPath="ConfigName"
                                                  IsEnabled="{Binding SelectedTemplate.UseActiveHolidayConfig, Converter={StaticResource InvertedBooleanConverter}, Mode=OneWay}"/>
                                    </StackPanel>

                                    <StackPanel Spacing="8">
                                        <TextBlock Text="固定岗位规则" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                        <ListView ItemsSource="{Binding FixedPositionRules}" SelectionMode="None" MaxHeight="200">
                                            <ListView.ItemTemplate>
                                                <DataTemplate x:DataType="models:FixedPositionRule">
                                                    <CheckBox Content="{x:Bind Description}" IsChecked="{x:Bind IsEnabled, Mode=TwoWay}"/>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </StackPanel>
                                    <InfoBar Severity="Informational" Title="手动排班" Message="手动排班是针对特定日期的，无法在模板中编辑。" IsOpen="True"/>
                                </StackPanel>
                            </Expander>

                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,16,0,0">
                                <Button Content="保存" Style="{ThemeResource AccentButtonStyle}" Command="{Binding SaveTemplateCommand}"/>
                                <Button Content="删除" Command="{Binding DeleteTemplateCommand}" IsEnabled="{Binding SelectedTemplate.IsDefault, Converter={StaticResource InvertedBooleanConverter}}"/>
                                <Button Content="复制" Command="{Binding DuplicateTemplateCommand}"/>
                                <Button Content="使用模板" Command="{Binding UseTemplateCommand}"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                    <ProgressRing IsActive="{Binding IsLoadingDetails}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="50" Height="50"/>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <GridView ItemsSource="{Binding Templates}"
                              SelectedItem="{Binding SelectedTemplate, Mode=TwoWay}"
                              SelectionMode="Single"
                              IsItemClickEnabled="True"
                              Padding="12">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Horizontal" ItemWidth="300" ItemHeight="200"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="dto:SchedulingTemplateDto">
                                <Grid Margin="4">
                                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4">
                                        <StackPanel Padding="12" Spacing="4">
                                            <TextBlock Text="{x:Bind Name}" Style="{ThemeResource SubtitleTextBlockStyle}" MaxLines="2" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{x:Bind Description, FallbackValue='无描述'}" Style="{ThemeResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" MaxLines="3" TextTrimming="CharacterEllipsis"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                                                <Border Background="{ThemeResource SystemAccentColorLight2}" CornerRadius="4" Padding="6,2">
                                                    <TextBlock Text="{x:Bind TemplateType}" Foreground="{ThemeResource TextFillColorPrimaryBrush}" FontSize="12"/>
                                                </Border>
                                                <FontIcon Glyph="&#xE734;" Visibility="{x:Bind IsDefault, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" Foreground="{ThemeResource SystemAccentColor}" ToolTipService.ToolTip="默认模板"/>
                                            </StackPanel>
                                            <Grid Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="人员" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                                    <TextBlock Text="{x:Bind PersonnelIds.Count}" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="岗位" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                                    <TextBlock Text="{x:Bind PositionIds.Count}" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                                </StackPanel>
                                            </Grid>
                                            <TextBlock Text="{x:Bind CreatedAt, Converter={StaticResource DateTimeFormatConverter}, ConverterParameter='创建于: yyyy-MM-dd'}" Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,8,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                    <ProgressRing IsActive="{Binding IsLoading}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="50" Height="50"/>
                    <TextBlock Text="未找到模板。请新建一个以开始。"
                               Visibility="{Binding Templates.Count, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=invert, Mode=OneWay}"
                               HorizontalAlignment="Center" VerticalAlignment="Center" Style="{ThemeResource SubtitleTextBlockStyle}"/>
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
