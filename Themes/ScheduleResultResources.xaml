<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================
         排班结果页面资源字典
         支持浅色、深色和高对比度主题
         ======================================== -->

    <!-- 主题颜色资源 -->
    <ResourceDictionary.ThemeDictionaries>
        <!-- 浅色主题 -->
        <ResourceDictionary x:Key="Light">
            <!-- 单元格相关颜色 -->
            <SolidColorBrush x:Key="ResultCellBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ResultCellBorderBrush" Color="#E1E1E1"/>
            <SolidColorBrush x:Key="ResultCellHoverBrush" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="ResultCellSelectedBrush" Color="#E3F2FD"/>
            
            <!-- 手动指定单元格颜色 -->
            <SolidColorBrush x:Key="ResultManualCellBackgroundBrush" Color="#E3F2FD"/>
            <SolidColorBrush x:Key="ResultManualCellBorderBrush" Color="#0078D4"/>
            
            <!-- 冲突单元格颜色 -->
            <SolidColorBrush x:Key="ResultConflictCellBackgroundBrush" Color="#FFEBEE"/>
            <SolidColorBrush x:Key="ResultConflictCellBorderBrush" Color="#D13438"/>
            
            <!-- 卡片相关颜色 -->
            <SolidColorBrush x:Key="ResultCardBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ResultCardBorderBrush" Color="#E1E1E1"/>
            <SolidColorBrush x:Key="ResultCardHoverBrush" Color="#F5F5F5"/>
            
            <!-- 工具栏相关颜色 -->
            <SolidColorBrush x:Key="ResultToolbarBackgroundBrush" Color="#F3F3F3"/>
            <SolidColorBrush x:Key="ResultToolbarBorderBrush" Color="#E1E1E1"/>
            
            <!-- 统计信息相关颜色 -->
            <SolidColorBrush x:Key="ResultStatisticsHeaderBrush" Color="#F3F3F3"/>
            <SolidColorBrush x:Key="ResultStatisticsRowBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ResultStatisticsAlternateRowBrush" Color="#F9F9F9"/>
        </ResourceDictionary>

        <!-- 深色主题 -->
        <ResourceDictionary x:Key="Dark">
            <!-- 单元格相关颜色 -->
            <SolidColorBrush x:Key="ResultCellBackgroundBrush" Color="#2D2D30"/>
            <SolidColorBrush x:Key="ResultCellBorderBrush" Color="#3F3F46"/>
            <SolidColorBrush x:Key="ResultCellHoverBrush" Color="#3E3E42"/>
            <SolidColorBrush x:Key="ResultCellSelectedBrush" Color="#1E3A5F"/>
            
            <!-- 手动指定单元格颜色 -->
            <SolidColorBrush x:Key="ResultManualCellBackgroundBrush" Color="#1E3A5F"/>
            <SolidColorBrush x:Key="ResultManualCellBorderBrush" Color="#60CDFF"/>
            
            <!-- 冲突单元格颜色 -->
            <SolidColorBrush x:Key="ResultConflictCellBackgroundBrush" Color="#4A2C2C"/>
            <SolidColorBrush x:Key="ResultConflictCellBorderBrush" Color="#F44336"/>
            
            <!-- 卡片相关颜色 -->
            <SolidColorBrush x:Key="ResultCardBackgroundBrush" Color="#2D2D30"/>
            <SolidColorBrush x:Key="ResultCardBorderBrush" Color="#3F3F46"/>
            <SolidColorBrush x:Key="ResultCardHoverBrush" Color="#3E3E42"/>
            
            <!-- 工具栏相关颜色 -->
            <SolidColorBrush x:Key="ResultToolbarBackgroundBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="ResultToolbarBorderBrush" Color="#3F3F46"/>
            
            <!-- 统计信息相关颜色 -->
            <SolidColorBrush x:Key="ResultStatisticsHeaderBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="ResultStatisticsRowBrush" Color="#2D2D30"/>
            <SolidColorBrush x:Key="ResultStatisticsAlternateRowBrush" Color="#252526"/>
        </ResourceDictionary>

        <!-- 高对比度主题 -->
        <ResourceDictionary x:Key="HighContrast">
            <!-- 单元格相关颜色 -->
            <SolidColorBrush x:Key="ResultCellBackgroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultCellBorderBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ResultCellHoverBrush" Color="#1A1A1A"/>
            <SolidColorBrush x:Key="ResultCellSelectedBrush" Color="#1A1A1A"/>
            
            <!-- 手动指定单元格颜色 -->
            <SolidColorBrush x:Key="ResultManualCellBackgroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultManualCellBorderBrush" Color="#FFFF00"/>
            
            <!-- 冲突单元格颜色 -->
            <SolidColorBrush x:Key="ResultConflictCellBackgroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultConflictCellBorderBrush" Color="#FF0000"/>
            
            <!-- 卡片相关颜色 -->
            <SolidColorBrush x:Key="ResultCardBackgroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultCardBorderBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ResultCardHoverBrush" Color="#1A1A1A"/>
            
            <!-- 工具栏相关颜色 -->
            <SolidColorBrush x:Key="ResultToolbarBackgroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultToolbarBorderBrush" Color="#FFFFFF"/>
            
            <!-- 统计信息相关颜色 -->
            <SolidColorBrush x:Key="ResultStatisticsHeaderBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultStatisticsRowBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultStatisticsAlternateRowBrush" Color="#1A1A1A"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <!-- ========================================
         单元格样式
         ======================================== -->

    <!-- 基础单元格样式 -->
    <Style x:Key="ResultCellStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ResultCellBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultCellBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="CornerRadius" Value="2"/>
    </Style>

    <!-- 手动指定单元格样式 -->
    <Style x:Key="ResultManualCellStyle" TargetType="Border" BasedOn="{StaticResource ResultCellStyle}">
        <Setter Property="Background" Value="{ThemeResource ResultManualCellBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultManualCellBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- 冲突单元格样式 -->
    <Style x:Key="ResultConflictCellStyle" TargetType="Border" BasedOn="{StaticResource ResultCellStyle}">
        <Setter Property="Background" Value="{ThemeResource ResultConflictCellBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultConflictCellBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- 可交互单元格样式（带悬停效果） -->
    <Style x:Key="ResultInteractiveCellStyle" TargetType="Border" BasedOn="{StaticResource ResultCellStyle}">
        <!-- 注意：WinUI 3 中 Border 不支持 Cursor 属性，需要在代码中通过 ProtectedCursor 设置 -->
    </Style>

    <!-- 选中单元格样式 -->
    <Style x:Key="ResultSelectedCellStyle" TargetType="Border" BasedOn="{StaticResource ResultCellStyle}">
        <Setter Property="Background" Value="{ThemeResource ResultCellSelectedBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- 空单元格样式 -->
    <Style x:Key="ResultEmptyCellStyle" TargetType="Border" BasedOn="{StaticResource ResultCellStyle}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultCellBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Opacity" Value="0.6"/>
    </Style>

    <!-- ========================================
         卡片样式
         ======================================== -->

    <!-- 基础卡片样式 -->
    <Style x:Key="ResultCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ResultCardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultCardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- 可点击卡片样式 -->
    <Style x:Key="ResultClickableCardStyle" TargetType="Border" BasedOn="{StaticResource ResultCardStyle}">
        <!-- 注意：WinUI 3 中 Border 不支持 Cursor 属性，需要在代码中通过 ProtectedCursor 设置 -->
    </Style>

    <!-- 统计卡片样式 -->
    <Style x:Key="ResultStatisticsCardStyle" TargetType="Border" BasedOn="{StaticResource ResultCardStyle}">
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- 工作量卡片样式 -->
    <Style x:Key="ResultWorkloadCardStyle" TargetType="Border" BasedOn="{StaticResource ResultCardStyle}">
        <Setter Property="Padding" Value="16,12"/>
    </Style>

    <!-- ========================================
         按钮样式
         ======================================== -->

    <!-- 工具栏按钮样式 -->
    <Style x:Key="ResultToolbarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- 主要操作按钮样式 -->
    <Style x:Key="ResultPrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource AccentButtonBackground}"/>
        <Setter Property="Foreground" Value="{ThemeResource AccentButtonForeground}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>

    <!-- 次要操作按钮样式 -->
    <Style x:Key="ResultSecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>

    <!-- 图标按钮样式 -->
    <Style x:Key="ResultIconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
    </Style>

    <!-- 危险操作按钮样式 -->
    <Style x:Key="ResultDangerButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource SystemFillColorCriticalBackgroundBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>

    <!-- ========================================
         文本样式
         ======================================== -->

    <!-- 页面标题样式 -->
    <Style x:Key="ResultPageTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- 区域标题样式 -->
    <Style x:Key="ResultSectionTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- 子标题样式 -->
    <Style x:Key="ResultSubtitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- 单元格文本样式 -->
    <Style x:Key="ResultCellTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>

    <!-- 表头文本样式 -->
    <Style x:Key="ResultHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- 统计数字样式 -->
    <Style x:Key="ResultStatisticsNumberStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
    </Style>

    <!-- 统计标签样式 -->
    <Style x:Key="ResultStatisticsLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <!-- 次要文本样式 -->
    <Style x:Key="ResultSecondaryTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Style>

    <!-- 提示文本样式 -->
    <Style x:Key="ResultHintTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}"/>
    </Style>

    <!-- ========================================
         列表和表格样式
         ======================================== -->

    <!-- 列表项样式 -->
    <Style x:Key="ResultListItemStyle" TargetType="ListViewItem">
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0,0,0,4"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- 统计表格行样式 -->
    <Style x:Key="ResultStatisticsRowStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ResultStatisticsRowBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultCellBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="MinHeight" Value="40"/>
    </Style>

    <!-- 统计表格表头样式 -->
    <Style x:Key="ResultStatisticsHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ResultStatisticsHeaderBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultCellBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="MinHeight" Value="44"/>
    </Style>

    <!-- ========================================
         工具栏和面板样式
         ======================================== -->

    <!-- 工具栏容器样式 -->
    <Style x:Key="ResultToolbarStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ResultToolbarBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultToolbarBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="MinHeight" Value="56"/>
    </Style>

    <!-- 筛选面板样式 -->
    <Style x:Key="ResultFilterPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ResultCardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultCardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="16,12"/>
    </Style>

    <!-- 冲突面板样式 -->
    <Style x:Key="ResultConflictPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ResultCardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultCardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1,0,0,0"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="MinWidth" Value="320"/>
    </Style>

    <!-- 统计面板样式 -->
    <Style x:Key="ResultStatisticsPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ResultCardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultCardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- ========================================
         进度条和指示器样式
         ======================================== -->

    <!-- 工作量进度条样式 -->
    <Style x:Key="ResultWorkloadProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Height" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Foreground" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
        <Setter Property="Background" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
    </Style>

    <!-- 覆盖率进度条样式 -->
    <Style x:Key="ResultCoverageProgressBarStyle" TargetType="ProgressBar">
        <Setter Property="Height" Value="6"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="Foreground" Value="{ThemeResource SystemFillColorSuccessBrush}"/>
        <Setter Property="Background" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
    </Style>

    <!-- 状态指示器样式 -->
    <Style x:Key="ResultStatusIndicatorStyle" TargetType="Ellipse">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>

    <!-- ========================================
         滚动查看器样式
         ======================================== -->

    <!-- 主内容滚动查看器样式 -->
    <Style x:Key="ResultContentScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- 列表滚动查看器样式 -->
    <Style x:Key="ResultListScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="Padding" Value="0,0,8,0"/>
    </Style>

    <!-- ========================================
         布局和容器样式
         ======================================== -->

    <!-- 页面容器样式 -->
    <Style x:Key="ResultPageContainerStyle" TargetType="Grid">
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- 主内容区容器样式 -->
    <Style x:Key="ResultMainContentStyle" TargetType="Grid">
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- 侧边栏容器样式 -->
    <Style x:Key="ResultSidebarStyle" TargetType="StackPanel">
        <Setter Property="Spacing" Value="12"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- 操作按钮区样式 -->
    <Style x:Key="ResultActionButtonsPanelStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Spacing" Value="12"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="0,16,0,0"/>
    </Style>

    <!-- 统计网格样式 -->
    <Style x:Key="ResultStatisticsGridStyle" TargetType="Grid">
        <Setter Property="ColumnSpacing" Value="24"/>
        <Setter Property="RowSpacing" Value="16"/>
    </Style>

    <!-- ========================================
         工具提示样式
         ======================================== -->

    <!-- 单元格工具提示样式 -->
    <Style x:Key="ResultCellToolTipStyle" TargetType="ToolTip">
        <Setter Property="Background" Value="{ThemeResource ResultCardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultCardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="MaxWidth" Value="300"/>
    </Style>

    <!-- ========================================
         对话框样式
         ======================================== -->

    <!-- 标准对话框样式 -->
    <Style x:Key="ResultDialogStyle" TargetType="ContentDialog">
        <Setter Property="Padding" Value="24"/>
        <Setter Property="MaxWidth" Value="600"/>
        <Setter Property="MaxHeight" Value="800"/>
    </Style>

    <!-- 全屏对话框样式 -->
    <Style x:Key="ResultFullScreenDialogStyle" TargetType="ContentDialog">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="MaxWidth" Value="Infinity"/>
        <Setter Property="MaxHeight" Value="Infinity"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!-- ========================================
         可访问性样式
         ======================================== -->

    <!-- 高对比度文本样式 -->
    <Style x:Key="ResultHighContrastTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="AutomationProperties.LiveSetting" Value="Polite"/>
    </Style>

    <!-- 可访问性按钮样式 -->
    <Style x:Key="ResultAccessibleButtonStyle" TargetType="Button">
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="MinHeight" Value="44"/>
        <Setter Property="Padding" Value="20,12"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- 焦点可见边框样式 -->
    <Style x:Key="ResultFocusVisibleBorderStyle" TargetType="Border">
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{ThemeResource SystemAccentColor}"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- ========================================
         特殊状态样式
         ======================================== -->

    <!-- 未保存更改提示样式 -->
    <Style x:Key="ResultUnsavedChangesBarStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource SystemFillColorCautionBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource SystemFillColorCautionBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="Padding" Value="16,8"/>
    </Style>

    <!-- 加载中遮罩样式 -->
    <Style x:Key="ResultLoadingOverlayStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource LayerFillColorDefaultBrush}"/>
        <Setter Property="Opacity" Value="0.8"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!-- 空状态容器样式 -->
    <Style x:Key="ResultEmptyStateStyle" TargetType="StackPanel">
        <Setter Property="Spacing" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="32"/>
    </Style>

    <!-- ========================================
         视图模式切换样式
         ======================================== -->

    <!-- 视图模式单选按钮样式 -->
    <Style x:Key="ResultViewModeRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <!-- 视图模式切换按钮样式 -->
    <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid x:Name="RootGrid" Background="{TemplateBinding Background}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="RootGrid.Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="RootGrid.Background" Value="{ThemeResource SubtleFillColorTertiaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource TextFillColorDisabledBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="CheckedStates">
                                <VisualState x:Name="Checked">
                                    <VisualState.Setters>
                                        <Setter Target="RootGrid.Background" Value="{ThemeResource AccentFillColorDefaultBrush}"/>
                                        <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Unchecked"/>
                                <VisualState x:Name="Indeterminate"/>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <ContentPresenter x:Name="ContentPresenter"
                                          Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          Padding="{TemplateBinding Padding}"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                          AutomationProperties.AccessibilityView="Raw"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ========================================
         动画资源
         ======================================== -->

    <!-- 淡入动画 -->
    <Storyboard x:Key="ResultFadeInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1"
                         Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- 滑入动画 -->
    <Storyboard x:Key="ResultSlideInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                         From="20" To="0"
                         Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1"
                         Duration="0:0:0.3">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut"/>
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

</ResourceDictionary>
