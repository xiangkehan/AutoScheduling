<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================
         排班结果页面资源字典
         支持浅色、深色和高对比度主题
         ======================================== -->

    <!-- 主题颜色资源 -->
    <ResourceDictionary.ThemeDictionaries>
        <!-- 浅色主题 -->
        <ResourceDictionary x:Key="Light">
            <!-- 单元格相关颜色 -->
            <SolidColorBrush x:Key="ResultCellBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ResultCellBorderBrush" Color="#E1E1E1"/>
            <SolidColorBrush x:Key="ResultCellHoverBrush" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="ResultCellSelectedBrush" Color="#E3F2FD"/>
            
            <!-- 手动指定单元格颜色 -->
            <SolidColorBrush x:Key="ResultManualCellBackgroundBrush" Color="#E3F2FD"/>
            <SolidColorBrush x:Key="ResultManualCellBorderBrush" Color="#0078D4"/>
            
            <!-- 冲突单元格颜色 -->
            <SolidColorBrush x:Key="ResultConflictCellBackgroundBrush" Color="#FFEBEE"/>
            <SolidColorBrush x:Key="ResultConflictCellBorderBrush" Color="#D13438"/>
            
            <!-- 卡片相关颜色 -->
            <SolidColorBrush x:Key="ResultCardBackgroundBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ResultCardBorderBrush" Color="#E1E1E1"/>
            <SolidColorBrush x:Key="ResultCardHoverBrush" Color="#F5F5F5"/>
            
            <!-- 工具栏相关颜色 -->
            <SolidColorBrush x:Key="ResultToolbarBackgroundBrush" Color="#F3F3F3"/>
            <SolidColorBrush x:Key="ResultToolbarBorderBrush" Color="#E1E1E1"/>
            
            <!-- 统计信息相关颜色 -->
            <SolidColorBrush x:Key="ResultStatisticsHeaderBrush" Color="#F3F3F3"/>
            <SolidColorBrush x:Key="ResultStatisticsRowBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ResultStatisticsAlternateRowBrush" Color="#F9F9F9"/>
        </ResourceDictionary>

        <!-- 深色主题 -->
        <ResourceDictionary x:Key="Dark">
            <!-- 单元格相关颜色 -->
            <SolidColorBrush x:Key="ResultCellBackgroundBrush" Color="#2D2D30"/>
            <SolidColorBrush x:Key="ResultCellBorderBrush" Color="#3F3F46"/>
            <SolidColorBrush x:Key="ResultCellHoverBrush" Color="#3E3E42"/>
            <SolidColorBrush x:Key="ResultCellSelectedBrush" Color="#1E3A5F"/>
            
            <!-- 手动指定单元格颜色 -->
            <SolidColorBrush x:Key="ResultManualCellBackgroundBrush" Color="#1E3A5F"/>
            <SolidColorBrush x:Key="ResultManualCellBorderBrush" Color="#60CDFF"/>
            
            <!-- 冲突单元格颜色 -->
            <SolidColorBrush x:Key="ResultConflictCellBackgroundBrush" Color="#4A2C2C"/>
            <SolidColorBrush x:Key="ResultConflictCellBorderBrush" Color="#F44336"/>
            
            <!-- 卡片相关颜色 -->
            <SolidColorBrush x:Key="ResultCardBackgroundBrush" Color="#2D2D30"/>
            <SolidColorBrush x:Key="ResultCardBorderBrush" Color="#3F3F46"/>
            <SolidColorBrush x:Key="ResultCardHoverBrush" Color="#3E3E42"/>
            
            <!-- 工具栏相关颜色 -->
            <SolidColorBrush x:Key="ResultToolbarBackgroundBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="ResultToolbarBorderBrush" Color="#3F3F46"/>
            
            <!-- 统计信息相关颜色 -->
            <SolidColorBrush x:Key="ResultStatisticsHeaderBrush" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="ResultStatisticsRowBrush" Color="#2D2D30"/>
            <SolidColorBrush x:Key="ResultStatisticsAlternateRowBrush" Color="#252526"/>
        </ResourceDictionary>

        <!-- 高对比度主题 -->
        <ResourceDictionary x:Key="HighContrast">
            <!-- 单元格相关颜色 -->
            <SolidColorBrush x:Key="ResultCellBackgroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultCellBorderBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ResultCellHoverBrush" Color="#1A1A1A"/>
            <SolidColorBrush x:Key="ResultCellSelectedBrush" Color="#1A1A1A"/>
            
            <!-- 手动指定单元格颜色 -->
            <SolidColorBrush x:Key="ResultManualCellBackgroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultManualCellBorderBrush" Color="#FFFF00"/>
            
            <!-- 冲突单元格颜色 -->
            <SolidColorBrush x:Key="ResultConflictCellBackgroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultConflictCellBorderBrush" Color="#FF0000"/>
            
            <!-- 卡片相关颜色 -->
            <SolidColorBrush x:Key="ResultCardBackgroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultCardBorderBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ResultCardHoverBrush" Color="#1A1A1A"/>
            
            <!-- 工具栏相关颜色 -->
            <SolidColorBrush x:Key="ResultToolbarBackgroundBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultToolbarBorderBrush" Color="#FFFFFF"/>
            
            <!-- 统计信息相关颜色 -->
            <SolidColorBrush x:Key="ResultStatisticsHeaderBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultStatisticsRowBrush" Color="#000000"/>
            <SolidColorBrush x:Key="ResultStatisticsAlternateRowBrush" Color="#1A1A1A"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>

    <!-- ========================================
         单元格样式
         ======================================== -->

    <!-- 基础单元格样式 -->
    <Style x:Key="ResultCellStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ResultCellBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultCellBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="MinHeight" Value="40"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="CornerRadius" Value="2"/>
    </Style>

    <!-- 手动指定单元格样式 -->
    <Style x:Key="ResultManualCellStyle" TargetType="Border" BasedOn="{StaticResource ResultCellStyle}">
        <Setter Property="Background" Value="{ThemeResource ResultManualCellBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultManualCellBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- 冲突单元格样式 -->
    <Style x:Key="ResultConflictCellStyle" TargetType="Border" BasedOn="{StaticResource ResultCellStyle}">
        <Setter Property="Background" Value="{ThemeResource ResultConflictCellBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultConflictCellBorderBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- 可交互单元格样式（带悬停效果） -->
    <Style x:Key="ResultInteractiveCellStyle" TargetType="Border" BasedOn="{StaticResource ResultCellStyle}">
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- 选中单元格样式 -->
    <Style x:Key="ResultSelectedCellStyle" TargetType="Border" BasedOn="{StaticResource ResultCellStyle}">
        <Setter Property="Background" Value="{ThemeResource ResultCellSelectedBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- 空单元格样式 -->
    <Style x:Key="ResultEmptyCellStyle" TargetType="Border" BasedOn="{StaticResource ResultCellStyle}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultCellBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Opacity" Value="0.6"/>
    </Style>

    <!-- ========================================
         卡片样式
         ======================================== -->

    <!-- 基础卡片样式 -->
    <Style x:Key="ResultCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource ResultCardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ResultCardBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- 可点击卡片样式 -->
    <Style x:Key="ResultClickableCardStyle" TargetType="Border" BasedOn="{StaticResource ResultCardStyle}">
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- 统计卡片样式 -->
    <Style x:Key="ResultStatisticsCardStyle" TargetType="Border" BasedOn="{StaticResource ResultCardStyle}">
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- 工作量卡片样式 -->
    <Style x:Key="ResultWorkloadCardStyle" TargetType="Border" BasedOn="{StaticResource ResultCardStyle}">
        <Setter Property="Padding" Value="16,12"/>
    </Style>

    <!-- ========================================
         按钮样式
         ======================================== -->

    <!-- 工具栏按钮样式 -->
    <Style x:Key="ResultToolbarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MinHeight" Value="36"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- 主要操作按钮样式 -->
    <Style x:Key="ResultPrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource AccentButtonBackground}"/>
        <Setter Property="Foreground" Value="{ThemeResource AccentButtonForeground}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>

    <!-- 次要操作按钮样式 -->
    <Style x:Key="ResultSecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ControlStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>

    <!-- 图标按钮样式 -->
    <Style x:Key="ResultIconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
    </Style>

    <!-- 危险操作按钮样式 -->
    <Style x:Key="ResultDangerButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource SystemFillColorCriticalBackgroundBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="MinHeight" Value="36"/>
    </Style>

    <!-- ========================================
         文本样式
         ======================================== -->

    <!-- 页面标题样式 -->
    <Style x:Key="ResultPageTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- 区域标题样式 -->
    <Style x:Key="ResultSectionTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- 子标题样式 -->
    <Style x:Key="ResultSubtitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- 单元格文本样式 -->
    <Style x:Key="ResultCellTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
    </Style>
