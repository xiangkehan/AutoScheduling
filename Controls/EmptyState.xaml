<UserControl
    x:Class="AutoScheduling3.Controls.EmptyState"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="Root"
    Visibility="Collapsed">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16" Padding="24">
        <FontIcon Glyph="{x:Bind IconGlyph, Mode=OneWay}" FontSize="64" HorizontalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        <TextBlock Text="{x:Bind Title, Mode=OneWay}" HorizontalAlignment="Center" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
        <TextBlock Text="{x:Bind Subtitle, Mode=OneWay}" HorizontalAlignment="Center" FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" TextAlignment="Center"/>
        <Button Content="{x:Bind ButtonText, Mode=OneWay}" 
                Command="{x:Bind ButtonCommand, Mode=OneWay}" 
                HorizontalAlignment="Center" 
                Style="{StaticResource AccentButtonStyle}"
                Visibility="{x:Bind ButtonText, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"/>
    </StackPanel>
</UserControl>
