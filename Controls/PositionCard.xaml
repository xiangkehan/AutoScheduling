<UserControl
    x:Class="AutoScheduling3.Controls.PositionCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="Root"
    Width="180"
    Height="120"
    CornerRadius="8"
    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
    BorderThickness="1"
    Padding="12">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8">
            <FontIcon Glyph="&#xE806;" FontSize="16"/>
            <TextBlock Text="{x:Bind Position.Name, Mode=OneWay}" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="{x:Bind Position.Location, Mode=OneWay, FallbackValue='N/A'}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12" Margin="0,4,0,0"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="4" Margin="0,8,0,0">
            <TextBlock Text="技能要求:" FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <ItemsRepeater ItemsSource="{x:Bind Position.RequiredSkillNames, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <StackLayout Orientation="Horizontal" Spacing="4"/>
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="4,2">
                            <TextBlock Text="{x:Bind}" FontSize="10" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="4" Margin="0,8,0,0">
            <TextBlock Text="{x:Bind Position.Description, Mode=OneWay}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="11" TextWrapping="Wrap" MaxLines="2" />
            <StackPanel Orientation="Horizontal" Spacing="4" Visibility="{x:Bind ShowActions, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Button Style="{StaticResource ButtonRevealStyle}" Content="编辑" FontSize="10" MinWidth="44"/>
                <Button Style="{StaticResource ButtonRevealStyle}" Content="删除" FontSize="10" MinWidth="44"/>
            </StackPanel>
        </StackPanel>
    </Grid>

    <UserControl.Resources>
        <Style TargetType="UserControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="UserControl">
                        <Grid>
                            <ContentPresenter />
                            <Border x:Name="SelectionBorder" BorderBrush="{ThemeResource AccentFillColorDefaultBrush}" BorderThickness="2" CornerRadius="8" Opacity="0" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="local:PositionCard.IsSelected" Value="True">
                                <Setter Target="SelectionBorder.Opacity" Value="1" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
</UserControl>
