<UserControl
    x:Class="AutoScheduling3.Controls.ErrorState"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="Root"
    Visibility="Collapsed">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16" Padding="24" MaxWidth="400">
        <FontIcon Glyph="&#xE783;" FontSize="64" HorizontalAlignment="Center" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
        <TextBlock Text="{x:Bind Title, Mode=OneWay}" HorizontalAlignment="Center" FontSize="16" FontWeight="SemiBold" Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
        <TextBlock Text="{x:Bind Message, Mode=OneWay}" HorizontalAlignment="Center" FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}" TextWrapping="Wrap" TextAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" Margin="0,16,0,0">
            <Button Content="{x:Bind RetryButtonText, Mode=OneWay}" 
                    Command="{x:Bind RetryCommand, Mode=OneWay}" 
                    Style="{StaticResource AccentButtonStyle}"/>
            <Button Content="{x:Bind DetailsButtonText, Mode=OneWay}" 
                    Command="{x:Bind DetailsCommand, Mode=OneWay}"
                    Visibility="{x:Bind DetailsButtonText, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
