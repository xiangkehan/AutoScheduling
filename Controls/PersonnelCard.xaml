<UserControl
    x:Class="AutoScheduling3.Controls.PersonnelCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="Root"
    MinWidth="160"
    MaxWidth="220"
    MinHeight="100"
    MaxHeight="140"
    CornerRadius="8"
    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
    BorderThickness="1"
    Padding="12">

    <Grid x:Name="LayoutRoot" RowDefinitions="Auto,*,Auto,Auto">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8">
            <FontIcon Glyph="&#xE77B;" FontSize="16"/>
            <TextBlock Text="{x:Bind Personnel.Name, Mode=OneWay}" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="{x:Bind Personnel.PositionName, Mode=OneWay, FallbackValue='N/A'}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" FontSize="12" Margin="0,4,0,0"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="4" Margin="0,8,0,0">
            <TextBlock Text="����:" FontSize="10" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <ItemsRepeater ItemsSource="{x:Bind Personnel.SkillNames, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <StackLayout Orientation="Horizontal" Spacing="4"/>
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="x:String">
                        <Border Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4" Padding="4,2">
                            <TextBlock Text="{x:Bind}" FontSize="10" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="4" Margin="0,8,0,0">
            <Border Width="40" Height="20" CornerRadius="10" Background="{x:Bind Personnel.IsActive, Mode=OneWay, Converter={StaticResource BoolToBrushConverter}, ConverterParameter='Accent|Gray'}" Padding="6,2">
                <TextBlock Text="{x:Bind Personnel.IsActive, Mode=OneWay, Converter={StaticResource BoolToTextConverter}, ConverterParameter='��ְ|��ְ'}" FontSize="10" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" HorizontalAlignment="Center"/>
            </Border>
            <Border Width="40" Height="20" CornerRadius="10" Background="{x:Bind Personnel.IsAvailable, Mode=OneWay, Converter={StaticResource BoolToBrushConverter}, ConverterParameter='Accent|Orange'}" Padding="6,2">
                <TextBlock Text="{x:Bind Personnel.IsAvailable, Mode=OneWay, Converter={StaticResource BoolToTextConverter}, ConverterParameter='����|æµ'}" FontSize="10" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" HorizontalAlignment="Center"/>
            </Border>
            <StackPanel Orientation="Horizontal" Spacing="4" Visibility="{x:Bind ShowActions, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <Button Style="{StaticResource ButtonRevealStyle}" Content="�༭" FontSize="10" MinWidth="44"/>
                <Button Style="{StaticResource ButtonRevealStyle}" Content="ɾ��" FontSize="10" MinWidth="44"/>
            </StackPanel>
        </StackPanel>
        <Border x:Name="SelectionBorder" BorderBrush="{ThemeResource AccentFillColorDefaultBrush}" BorderThickness="2" CornerRadius="8" Opacity="0" />
    </Grid>
</UserControl>
