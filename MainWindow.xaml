<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="AutoScheduling3.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="自动排班系统">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <NavigationView x:Name="NavigationViewControl"
                    IsBackButtonVisible="Auto"
                    IsBackEnabled="{x:Bind ContentFrame.CanGoBack, Mode=OneWay}"
                    BackRequested="NavigationView_BackRequested"
                    ItemInvoked="NavigationView_ItemInvoked"
                    PaneDisplayMode="Left">
        
        <NavigationView.MenuItems>
            <!-- 数据管理 -->
            <NavigationViewItemHeader Content="数据管理"/>
            <NavigationViewItem Content="人员管理" Tag="Personnel">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE716;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="哨位管理" Tag="Position">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE707;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="技能管理" Tag="Skill">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE82F;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <!-- 排班流程 -->
            <NavigationViewItemHeader Content="排班流程"/>
            <NavigationViewItem Content="创建排班" Tag="CreateScheduling">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE710;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="模板管理" Tag="TemplateManage">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE736;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="草稿箱" Tag="Drafts">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE74C;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>

            <NavigationViewItemSeparator/>

            <!-- 历史与分析 -->
            <NavigationViewItemHeader Content="历史与分析"/>
            <NavigationViewItem Content="历史记录" Tag="History">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xE81C;"/>
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>

        <NavigationView.PaneFooter>
            <StackPanel>
                <NavigationViewItem Content="设置" Tag="Settings">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE713;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </StackPanel>
        </NavigationView.PaneFooter>

        <Frame x:Name="ContentFrame"/>
    </NavigationView>
</Window>
